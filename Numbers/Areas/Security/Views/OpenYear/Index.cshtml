@model IEnumerable<Numbers.Entity.Models.AppPeriod>
@using Numbers.Repository.Helpers;
@{ ViewData["Title"] = "Period Index";
    ViewData["CurrentPage"] = "Period";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List of Opened Year</h5>

            </div>
            
                <div class="ibox-content">
                    <div class="text-center">
                         
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="OpenYear" asp-action="Create"><strong>Create New</strong> </a>
                    </div>
                    <br />
                    <br />
                    <table class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    Module
                                </th>
                                <th>
                                    Status
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                NumbersDbContext _dbcontext = new NumbersDbContext();
                                var moduleName = new ConfigValues(_dbcontext).GetModulebyId(Convert.ToInt32(item.ModuleId));
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @moduleName
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PayrollOpen)
                                    </td>

                                    <td>
                                        <span title="Click to Un-Approve Voucher">
                                            <a asp-action="YearClose" asp-controller="OpenYear" class="btn btn-sm btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to Close Year?')"><i class="fa fa-thumbs-down"></i></a>
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            
        </div>
    </div>
</div>
