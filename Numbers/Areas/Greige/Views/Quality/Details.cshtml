@model Numbers.Entity.ViewModels.GRQualityViewModel

@{
    ViewData["Title"] = "List Greige Quality";
    var companyName = Context.Session.GetString("CompanyName");
    var companyId = Context.Session.GetInt32("CompanyId").Value;
}

<style>
    .form-group > .select2-container {
        width: 100% !important;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5> Greige Quality</h5>
                <span class="label label-success pull-right status"></span>
            </div>
            <div class="ibox-content ibox-content-1">
                <form method="post"  asp-controller="Quality" asp-action="Index">
                    <div class="row">
                        <input hidden asp-for="GRQuality.Id" />
                        <div class="col-lg-2 col-sm-4">
                            <div class="form-group">
                                <label class="col-form-label">Trans#</label>
                                @if (Model.GRQuality.Id != 0)
                                {
                                    <input readonly class="form-control" id="Code" data-validation="required" asp-for="GRQuality.TransactionNo" autocomplete="off" tabindex="-1" />
                                }
                                else
                                {
                                    <input readonly class="form-control" id="Code" data-validation="required" value="" autocomplete="off" tabindex="-1" />}
                            </div>
                        </div>
                        <div class="col-lg-2 col-sm-4">
                            <div class="form-group">
                                <label>Trans Date</label>
                                <div class="input-group" readonly>
                                    <span class="input-group-addon" readonly><i class="fa fa-calendar"></i></span>
                                    <input tabindex="-1" id="TransactionDate" class="form-control" asp-for="GRQuality.TransactionDate" type="text" readonly value="@CommonHelper.CurrentDate" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="col-form-label">Greige Category</label>
                                <select readonly disabled asp-for="GRQuality.GRCategoryId" class="chosen-select form-control" id="GRCategoryId" asp-items="@Model.GRCategoryLOV" required>
                                    <option value="0">Please select</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="col-form-label">Greige Construction</label>
                                <select readonly disabled asp-for="GRQuality.GRConstructionId" class="chosen-select form-control" id="GRConstructionId" asp-items="@Model.GRConstructionLOV" required>
                                    <option value="0">Please select</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="col-form-label">Width</label>
                                <input readonly type="text" asp-for="GRQuality.Width" id="Width" class="form-control text-right" />
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="col-form-label">Loom Type</label>
                                <select readonly disabled asp-for="GRQuality.LoomTypeId" class="chosen-select form-control" id="LoomTypeId" asp-items="@Model.LoomTypeLOV" required>
                                    <option value="0">Please select</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <br />
                             <button type="onclick"  asp-controller="Quality"asp-action="Index"  class="btn btn-warning">Back</button>

                        </div>
                    </div>


