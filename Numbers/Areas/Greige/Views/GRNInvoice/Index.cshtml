@model Numbers.Entity.Models.GRGRNInvoice
@{
    ViewData["Title"] = "List of Mendings";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div class="text-center">
                    <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="GRNInvoice" asp-action="Create"><strong>Create New</strong></a>
                </div>
                <br />
                <br />
                <table style="width:100%;" id="Table" class="table table-bordered table-striped dataTables-example">
                    <thead>
                        <tr>
                            <th class="searchHeader" width="10%">@Html.DisplayNameFor(m => m.PurchaseNo)</th>
                            <th class="searchHeader" width="13%">Purchase Date</th>
                            <th class="searchHeader" width="22%">@Html.DisplayNameFor(m => m.GRN.Vendor.Name)</th>
                            <th class="searchHeader" width="12%">@Html.DisplayNameFor(m => m.SupplierInvoiceNo)</th>
                            <th class="searchHeader" width="13%">@Html.DisplayNameFor(m => m.SupplierInvoiceDate)</th>
                            <th class="searchHeader" width="10%">@Html.DisplayNameFor(m => m.GRNId)</th>
                            <th width="20%">Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section customJS{
    <script>
        $(document).ready(function () {
            debugger;
            var table1 = $("#Table").dataTable({
                lengthMenu: [
                    [50, 100, 150, -1],
                    [50, 100, 150, 'All'],
                ],
                "processing": true,
                "serverSide": true,
                "filter": true,
                /*"order": false,*/
                order: [[0, "desc"]],
                dom: "Blrtip",
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                "ajax": {
                    "url": "/Greige/GRNInvoice/GetList",
                    "type": "POST",
                    "datatype": "json"
                },
                "language": {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "columnDefs": [{

                    "targets": '_all',
                    "defaultContent": "-"
                }, { "orderable": false, "targets": [6] }],

                "columns": [
                    { "data": "grgrnInvoices.purchaseNo", "name": "PurchaseNo", className: "text-center" },
                    { "data": "date", "name": "CreatedDate", className: "text-center" },
                    { "data": "grgrnInvoices.grn.vendor.name", "name": "GRN.Vendor.Name", className: "text-left" },
                    { "data": "grgrnInvoices.supplierInvoiceNo", "name": "SupplierInvoiceNo", className: "text-right" },
                    { "data": "date", "name": "SupplierInvoiceDate", className: "text-center" },
                    { "data": "grgrnInvoices.grn.transactionNo", "name": "GRN.TransactionNo", className: "text-right" },
                    {

                        "data": "grgrnInvoices", className: "text-center",
                        "render": function(data) {

                            debugger;
                            if (data.status != "Approved") {
                                return "<a href='/Greige/GRNInvoice/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>  <a  href='/Greige/GRNInvoice/Approve?id=" + data.id + "'class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-thumbs-up' title='Approve'></i></a>  <a href='/Greige/GRNInvoice/Delete?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='far fa-trash-alt' title='Delete'></i></a> ";
                            }
                            else {
                                return "<a href='/Greige/GRNInvoice/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a>   <a href='@ViewBag.ReportPath" + data.voucherId + "' target='_blank' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-print' title='print'></i></a> <a href='/Greige/GRNInvoice/UnApprove?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-thumbs-down m-t-n-xs' title='Un Approve'></i></a> ";
                            }


                            //"data": "grMending", className: "text-center",
                        //"render": function (data) {
                        //    return "<a href='/Greige/Mending/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a href='/Greige/Mending/Delete?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='far fa-trash-alt' title='Delete'></i></a>";

                        //}


                        }
                    }],

            })
            $('#Table thead th').each(function () {
                if ($(this).hasClass("searchHeader")) {
                    var title = $(this).text();
                    $(this).html('<span hidden>' + title + '</span><input type="text" style ="color: black;width: inherit;" placeholder="' + title + '" />');
                }
            });
            table1.api().columns().every(function () {
                var that = this; debugger
                var searchBox = $('input', this.header());
                searchBox.on('keyup change clear', function () {
                    that.search(this.value).draw()
                })
                searchBox.on('click', function (e) {
                    debugger
                    e.stopPropagation();
                });
            });
        });
    </script>
}
