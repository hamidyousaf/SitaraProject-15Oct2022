@model GLVoucher
<link href="~/css/plugins/select2/select2.min.css" rel="stylesheet" />
<style>
    .fa.fa-trash-alt:hover {
        color: red;
    }
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<div class="table-responsive">
    <p><strong>Voucher No: </strong>@Model.VoucherType-@Model.VoucherNo</p>
    <p><strong>Voucher Date: </strong>@Model.VoucherDate.ToString(CommonHelper.DateFormat)</p>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Account Name</th>
                <th class="text-right">Debit</th>
                <th class="text-right">Credit</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TempData["Details"] as IEnumerable<GLVoucherDetail>)
            {
                <tr>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.Account.Code) -
                        @Html.DisplayFor(modelItem => item.Account.Name)
                    </td>
                    <td class="text-right">
                        @{
                            var usDebit = new System.Globalization.CultureInfo("en-US");
                            @string.Format(usDebit, "{0:N}", item.Debit)
                        }
                    </td>
                    <td class="text-right">
                        @{
                            var usCredit = new System.Globalization.CultureInfo("en-US");
                            @string.Format(usCredit, "{0:N}", item.Credit)
                        }
                    </td>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>  </th>
                <th class="text-right">
                    @{
                        var usDebitAmount = new System.Globalization.CultureInfo("en-US");
                        @string.Format(usDebitAmount, "{0:N}", Model.Amount)
                    }
                </th>
                <th class="text-right">
                    @{
                        var usCreditAmount = new System.Globalization.CultureInfo("en-US");
                        @string.Format(usCreditAmount, "{0:N}", Model.Amount)
                    }
                </th>
                <th>  </th>
            </tr>
        </tfoot>
    </table>
</div>

