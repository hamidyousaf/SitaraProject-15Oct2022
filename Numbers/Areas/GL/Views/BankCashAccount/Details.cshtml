@model GLBankCashAccount
@{
    ViewData["Title"] = "Bank/Cash Detail";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <form class="form-horizontal">

                    <div class="form-group">
                        <label asp-for="Id" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Id)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Model.Date.ToString(CommonHelper.DateFormat)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccountName" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.AccountName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccountNumber" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.AccountNumber)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="VoucherType" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.VoucherType)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaymentVoucherType" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.PaymentVoucherType)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">GL Account</label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Account.Code) - @Html.DisplayFor(model => model.AccountName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-1">
                            <input type="submit" value="List" class="btn btn-white" asp-action="Index" />
                           @* <input type="submit" value="Edit" class="btn btn-primary" asp-action="Create" asp-route-id="@Model.Id" />*@
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
