@model IEnumerable<GLSubAccount>
@{
    ViewData["Title"] = "List of Sub Accounts";
    ViewData["CurrentPage"] = "Job Descriptions";
    var companyName = Context.Session.GetString("CompanyName");
    var companyId = Context.Session.GetInt32("CompanyId").Value;
}
<style>
    .table > thead {
        background-color: #4857a5;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div class="text-center">
                    <a class="btn btn-primary pull-left m-t-n-xs" asp-action="Create"><strong>Create New</strong></a>
                    <a onclick="generateApArReport(0,'SubAccountList','@companyName','@companyId');" class="btn btn-sm btn-primary btn-lg m-t-n-xs pull-right"><i class="fas fa-print" title="Print Report"> Print Report</i></a>
                </div>
                <br /><br />
                <table width="100%"  class="table table-bordered table-striped dataTables-example" id="dataTable">
                    <thead>
                        <tr>
                            <th class="searchHeader"  width="10%">Id</th>
                            <th class="searchHeader"  width="10%">Date</th>
                            <th class="searchHeader"  width="25%">Description</th>
                            <th class="searchHeader"  width="25%">Sub Account</th>
                            <th class="searchHeader"  width="15%">Status</th>
                            <th width="15%">Action</th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>
    </div>
</div>

@section customJS {

    <script src="~/js/INV/storeIssueItem.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/INV/customSelect2.js"></script>
    <script>
        $(document).ready(function () {
            GetList();
        });
        function GetList() {
            var table1 = $("#dataTable").dataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "order": [[0, "desc"]],
                dom: "Blrtip",
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                "ajax": {
                    "url": "/GL/SubAccounts/GetSubAccounts",
                    "type": "POST",
                    "datatype": "json"
                },
                "language": {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "columnDefs": [{
                    "target": [0],
                    "visible": false,
                    "searchable": false
                }, { "orderable": false, "targets": [5] }],

                "columns": [
                    { "data": "glSubAccount.id", "name": "GLSubAccount.Id", className: "text-center" },
                    { "data": "shortDate", "name": "GLSubAccount.Date", className: "text-center" },
                    { "data": "glSubAccount.description", "name": "GLSubAccount.Description", className: "text-left" },
                    { "data": "glSubAccountDetail.description", "name": "GLSubAccountDetail.Description", className: "text-left" },
                    { "data": "glSubAccount.status", "name": "GLSubAccount.Status", className: "text-center"},
                    {
                        "data": "glSubAccount", className: "text-center",
                        "render": function (data, row) {
                            if (data.status != "Approved") {
                                if (data.approve == true) {
                                    return "<a href='/GL/SubAccounts/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/GL/SubAccounts/Approve?id=" + data.id + "'class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-thumbs-up' title='Approve'></i></a>    <a onclick='openReport(" + data.id + ") 'class='btn btn-sm btn-primary btn-lg m-t-n-xs' > <i class='fas fa-print' title='Print Report'></i></a> ";
                                } else {
                                    return "<a href='/GL/SubAccounts/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a onclick='openReport(" + data.id + ") 'class='btn btn-sm btn-primary btn-lg m-t-n-xs' > <i class='fas fa-print' title='Print Report'></i></a> ";
                                }
                            }
                            else {
                                if (data.unapprove == true) {
                                    return "<a href='/GL/SubAccounts/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a>    <a href='/GL/SubAccounts/UnApprove?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-thumbs-down m-t-n-xs' title='Un Approve'></i></a>    <a onclick='openReport(" + data.id + ") 'class='btn btn-sm btn-primary btn-lg m-t-n-xs' > <i class='fas fa-print' title='Print Report'></i></a>";
                                } else {
                                    return "<a href='/GL/SubAccounts/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a>    <a onclick='openReport(" + data.id + ") 'class='btn btn-sm btn-primary btn-lg m-t-n-xs' > <i class='fas fa-print' title='Print Report'></i></a>";
                                }
                            }

                        }
                    }
                ],

            })
            $('#dataTable thead th').each(function () {
                debugger;
                if ($(this).hasClass("searchHeader")) {
                    var title = $(this).text();
                    $(this).html('<span hidden>' + title + '</span><input type="text" style ="color: black;width: inherit;" placeholder="' + title + '" />');
                }
            });
            table1.api().columns().every(function () {
                debugger;
                var that = this;
                var searchBox = $('input', this.header());
                searchBox.on('keyup change clear', function () {
                    that.search(this.value).draw()
                })
                searchBox.on('click', function (e) {
                    e.stopPropagation();
                });
            });
        }
        function openReport(id) {
            generateApArReport(id, "SubAccount", "@companyName",@companyId);
        }
    </script>
}