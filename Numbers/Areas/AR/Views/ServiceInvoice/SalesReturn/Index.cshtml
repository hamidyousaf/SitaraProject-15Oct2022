@model IEnumerable<ARInvoice>
@{
    ViewData["Title"] = "List of Sale Returns";
    ViewData["CurrentPage"] = "Sales Return";

    var companyName = Context.Session.GetString("CompanyName");
    var companyId = Context.Session.GetInt32("CompanyId").Value;
}

<style>
    .table > thead {
        background-color: #4857a5;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div @*class="ibox-title"*@>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="SalesReturn" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <div class="table-responsive">
                        <table style="width:100%;" id="Table" class="table table-bordered table-striped dataTables-example">
                            <thead>
                                <tr>
                                    <th hidden>Id</th>
                                    <th width="8%">Inv.#</th>
                                    <th width="11%">Inv. Date</th>
                                    <th width="11%">Customer</th>
                                    <th width="11%">Ref. No</th>
                                    <th width="8%">Total</th>
                                    <th width="11%">S. Tax</th>
                                    <th width="11%">G. Total</th>
                                    <th width="11%">Status</th>
                                    <th width="18%"></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section customJS{
    <script>
        $(document).ready(function () {
            $("#Table").dataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "order": [[0, "desc"]],
                "ajax": {
                    "url": "/AR/SalesReturn/GetSR",
                    "type": "POST",
                    "datatype": "json"
                },
                "language": {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "columnDefs": [{

                    "targets": '_all',
                    "defaultContent": "-"
                },
                {
                    "targets": [0],
                    "visible": false
                },

                { "orderable": false, "targets": [9] }],

                "columns": [
                    { "data": "invoice.id", "name": "Id", className: "text-right" },
                    { "data": "invoice.invoiceNo", "name": "InvoiceNo", className: "text-right" },
                    { "data": "invDate", "name": "InvoiceDate", className: "text-center" },
                    { "data": "customerName", "name": "CustomerId", className: "text-left" },
                    { "data": "invoice.referenceNo", "name": "ReferenceNo", className: "text-left" },
                    { "data": "invoice.total", "name": "Total", className: "text-right" },
                    { "data": "invoice.salesTaxAmount", "name": "SalesTaxAmount", className: "text-right" },
                    { "data": "invoice.grandTotal", "name": "GrandTotal", className: "text-right" },
                    { "data": "invoice.status", "name": "Status", className: "text-center" },
                    {
                        "data": "invoice",
                        "render": function (data, row) {
                            if (data.status != "Approved") {
                                return "<a href='/AR/SalesReturn/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/AR/SalesReturn/Approve?id=" + data.id + "' onclick='return approveAlert()'  class='btn btn-sm btn-success m-t-n-xs' > <i class='fa fa-thumbs-up' title='Approve'></i></a> <a href='/AR/SalesReturn/Delete?id=" + data.id + "'  class='btn btn-sm btn-danger m-t-n-xs' onclick='return deleteAlert()' > <i class='fa fa-trash-alt' title='Delete'></i></a>  <a onclick='openReport(" + data.id + ")' class='btn btn-sm btn-primary btn-lg m-t-n-xs delete' > <i class='fas fa-print' title='Print Report'></i></a >";
                            }
                            else {
                                return '<a href="/AR/SalesReturn/Details?id=' + data.id + '" class="btn btn-sm btn-info m-t-n-xs"><i class="fa fa-search" title="View"></i></a>  <a   class="btn btn-sm btn-primary btn-lg m-t-n-xs" onclick="openReport(' + data.id + ')" > <i class="fas fa-print" title="Print Report"></i></a >';
                            }

                        }
                    }
                ],

            })
        });

        function approveAlert() {
            if (confirm("Are you sure you want to Approve Sale Return?")) {
                return true;
            } else {
                return false;
            }
        }
        function deleteAlert() {
            if (confirm("Are you sure you want to Delete this Sale Return?")) {
                return true;
            } else {
                return false;
            }
        }
        function openReport(id) {
            generateApArReport(id, "SalesReturn", "@companyName",@companyId);
        }
    </script>
}
