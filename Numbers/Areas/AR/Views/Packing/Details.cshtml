@model ARPacking
@{
    ViewData["Title"] = "Approved Sales Order";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-4 pull-right">
                <div class="title-action">
                    <a asp-controller="Packing" asp-action="Index" class="btn btn-white">List</a>
                    @*<a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><span>Customer Name: <strong class="text-navy"> @Model.Customer.Name</strong></span></h4>
                        <span><strong>SRI #: </strong> @Model.SRI.TransactionNo</span><br />
                    </div>
                    <div class="col-sm-6 text-right">
                        <h4><span>Trans. #: <strong class="text-navy">@Model.PackingNo</strong></span></h4>
                        <span><strong>Trans. Date:</strong>@Model.PackingDate.ToString(CommonHelper.DateFormat)</span><br />
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Item Category</th>
                                <th>Item Code & Description</th>
                                <th>Return Type</th>
                                <th>Season</th>
                                <th>Reason Type</th>
                                <th>Qty</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in TempData["Detail"] as IEnumerable<ARPackingItems>)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FourthLevel.Code) -
                                    @Html.DisplayFor(modelItem => item.FourthLevel.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReturnType.ConfigValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Season.ConfigValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReasonType.ConfigValue)
                                </td>
                                <td class="text-right">
                                    @item.Qty
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /table-responsive -->

                <table class="table invoice-total">
                    <tbody>
                        <tr>
                            <td><strong>Total Quantity:</strong></td>
                            <td>
                                @{
                                    var usSubTotal = new System.Globalization.CultureInfo("en-US");
                                    @string.Format(usSubTotal, "{0:N}", ViewBag.TotalQty)
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>