@model ARDeliveryChallan
@using Numbers.Areas.AR.Controllers
@{
    ViewData["Title"] = "Approved Delivery Challan";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-4 pull-right">
                <div class="title-action">
                    <a asp-controller="DeliveryChallan" asp-action="Index" class="btn btn-white">List</a>
                    @* <a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>*@
                    <a href="@string.Format(ViewBag.ReportPath2, Model.Id)" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><span>Customer Name:<strong class="text-navy"> @Model?.Customer?.Name</strong></span></h4>
                        <span><strong>Vehicle Number:</strong> @Model.VehicleNo</span><br />
                        <span><strong>Vehicle Type:</strong> @ViewBag.Vahicle</span><br />
                        <span><strong>Driver Name:</strong> @Model.DriverName</span><br />
                        <span><strong>Driver Contact No:</strong> @Model.DriverContactNo</span><br />
                        <span><strong>Transport Comapany:</strong> @Model.TransportCompany</span><br />
                    </div>
                    <div class="col-sm-6 text-right">
                        <h4><span>Delivery Challan No. <strong class="text-navy">@Model.DCNo</strong></span></h4>
                        <p>
                            <span><strong>Delivery Challan Date:</strong> @Model.DCDate.ToString(CommonHelper.DateFormat)</span><br />
                        </p>
                        <br /><p>
                            <span><strong>Builty Number:</strong> @Model.BuiltyNo</span><br />
                        </p>

                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>SO.#</th>
                                <th>SO. Date</th>
                                <th>Description</th>
                                <th>Bale Type</th>
                                <th>UOM</th>
                                <th>Bale.#</th>
                                <th>Qty</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ARDeliveryChallanItems)
                            {
                                NumbersDbContext dbContext = new NumbersDbContext();
                                var baleType = new DeliveryChallanController(dbContext).GetBaleType(item.BaleId);
                                var baleNum = new DeliveryChallanController(dbContext).GetBaleNo(item.BaleId);
                                var date = item.ARSaleOrderItem.SaleOrder.SaleOrderDate.ToString(CommonHelper.DateFormat);
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.ARSaleOrderItem.SaleOrder.SaleOrderNo)
                                </td>
                                <td class="text-center">
                                    @date
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Item.Code) -
                                    @Html.DisplayFor(modelItem => item.Item.Name)
                                </td>
                                <td class="text-center">
                                    @baleType
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.UOM)
                                </td>
                                <td class="text-center">
                                    @baleNum
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.Qty)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /table-responsive -->
                <table class="table invoice-total">
                        <tbody>
                            <tr>
                                <td><strong>Total Qty:</strong></td>
                                <td>@ViewBag.TotalQty</td>
                            </tr>
                            @*<tr>
                                <td><strong>Discount :</strong></td>
                                <td>
                                    @{
                                        var usDiscAmount = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usDiscAmount, "{0:N}", Model.DiscountAmount)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Sales Tax :</strong></td>
                                <td>
                                    @{
                                        var usSTAmount = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usSTAmount, "{0:N}", Model.SalesTaxAmount)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Grand Total :</strong></td>
                                <td>
                                    <b>
                                        @{
                                            var usGrandTotal = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usGrandTotal, "{0:N}", Model.GrandTotal)
                                        }
                                    </b>
                                </td>
                            </tr>*@
                        </tbody>
                    </table>
                <div class="well-remarks m-t">
                    <strong>Remarks:</strong>
                    @Model.Remarks
                </div>
            </div>
        </div>
    </div>
</div>

