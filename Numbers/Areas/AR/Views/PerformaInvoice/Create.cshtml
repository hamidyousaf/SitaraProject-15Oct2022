@model ARPerformaInvoiceViewModel
@{ 
    ViewData["Title"] = "Create Performa Invoice";
    ViewData["CurrentPage"] = "Performa Invoice";
    
   }

@section customCSS{
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet" />
    <link href="~/css/plugins/dataTables/select.dataTables.min.css" rel="stylesheet" />

}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins container-fluid">
            <form class="ibox-content form-horizontal" method="post" asp-action="Create" asp-controller="PerformaInvoice" onsubmit="return submitdetails(this)" enctype="multipart/form-data">
                @*<input asp-for="Id" type="hidden" />*@
                <div class="row">
                    <div class="col-lg-2 col-sm-3">
                        <div class="form-group">
                            <label>Perform Inv</label>
                            <div class="input-group">
                                <input class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-sm-3">
                        <div class="form-group">
                            <label>Date</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input data-validation="required" data-validation-error-msg="Sale Order Date is required" data-validation-error-msg-container="#dcDate" class="form-control custom-date-picker" type="text" value="@CommonHelper.CurrentDate" style="background-color:white" />
                            </div>
                            <p id="dcDate"></p>
                        </div>
                    </div>

                    <div class="col-lg-2 col-sm-3">
                        <div class="form-group">
                            <label>LC No</label>
                            <input class="form-control" style="background-color:white">

                            <p id="c"></p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-3">
                        <div class="form-group">
                            <label>LC Opening Date</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input data-validation="required" data-validation-error-msg="Sale Order Date is required" data-validation-error-msg-container="#dcDate" class="form-control custom-date-picker" type="text" value="@CommonHelper.CurrentDate" style="background-color:white" />
                            </div>
                            <p id="dcDate"></p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2 col-sm-3">
                        <div class="form-group">
                            <label>LC Last Date</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input data-validation="required" data-validation-error-msg="Sale Order Date is required" data-validation-error-msg-container="#dcDate" class="form-control custom-date-picker" type="text" value="@CommonHelper.CurrentDate" style="background-color:white" />
                            </div>
                            <p id="dcDate"></p>
                        </div>
                    </div>

                    <div class="col-lg-2 col-sm-3 ">
                        <div class="form-group">
                            <label>LC Opening Bank </label>
                            <Select required class="form-control" style="background-color:white">
                                <option selected disabled>Select...</option>
                                <option value="1">Lahore</option>
                                <option value="2">Islamabad</option>
                            </Select>
                        </div>
                    </div>

                    <div class="col-lg-2     col-sm-3 ">
                        <div class="form-group">
                            <label>
                                vendor
                            </label>
                            <input class="form-control" style="background-color:white">

                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-3" style="margin-top:5px;">
                        <div class="form-group">
                            <label>

                            </label>
                            <input class="form-control" style="background-color:white">

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2 col-sm-3">
                        <div class="form-group">
                            <label>
                                Shipping port
                            </label>
                            <input class="form-control" style="background-color:white">

                        </div>
                    </div>

                    <div class="col-lg-2 col-sm-3">
                        <div class="form-group">
                            <label>
                                discharge port
                            </label>
                            <input class="form-control" style="background-color:white">

                        </div>
                    </div>

                    <div class="col-lg-2 col-sm-3">
                        <div class="form-group">
                            <label>
                                Origin
                            </label>
                            <input class="form-control" style="background-color:white">
                        </div>
                    </div>

                    <div class="col-lg-3 col-sm-3 ">
                        <div class="form-group">
                            <label>
                                Payment Mode
                            </label>
                            <Select required class="form-control" style="background-color:white">
                                <option selected disabled>Select...</option>
                                <option value="1">A</option>
                                <option value="2">B</option>
                            </Select>
                        </div>
                    </div>

                    <div class="col-lg-3 col-sm-3 ">
                        <div class="form-group">
                            <label>
                                Cost Terms
                            </label>
                            <Select required class="form-control" style="background-color:white">
                                <option selected disabled>Select...</option>
                                <option value="1">A</option>
                                <option value="2">B</option>
                            </Select>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-lg-2 col-sm-3 ">
                        <div class="form-group">
                            <label>
                                Shipping Mode
                            </label>
                            <Select required class="form-control" style="background-color:white">
                                <option selected disabled>Select...</option>
                                <option value="1">A</option>
                                <option value="2">B</option>
                            </Select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-3 ">
                        <div class="form-group">
                            <label>
                                Currency
                            </label>
                            <Select required class="form-control" style="background-color:white">
                                <option selected disabled>Select...</option>
                                <option value="1">A</option>
                                <option value="2">B</option>
                            </Select>
                        </div>
                    </div>

                    <div class="col-lg-3 col-sm-3">
                        <div class="form-group">
                            <label>Exchange Rate Date</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input data-validation="required" data-validation-error-msg="Sale Order Date is required" data-validation-error-msg-container="#dcDate" class="form-control custom-date-picker" type="text" value="@CommonHelper.CurrentDate" style="background-color:white" />
                            </div>
                            <p id="dcDate"></p>
                        </div>
                    </div>


                    <div class="col-lg-4 col-sm-3 ">
                        <div class="form-group">
                            <label>
                                Exchange rate
                            </label>
                            <input class="form-control "
                                   style="background-color:white" />

                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-lg-2     col-sm-3 ">
                        <div class="form-group">
                            <label>
                                vendor Account
                            </label>
                            <input class="form-control" style="background-color:white">

                        </div>
                    </div>
                    <div class="col-lg-10 col-sm-3" style="margin-top:5px;">
                        <div class="form-group">
                            <label>

                            </label>
                            <input class="form-control" style="background-color:white">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-sm-3 ">
                        <div class="form-group">
                            <label>
                                Remarks
                            </label>
                            <input class="form-control" style="background-color:white" />
                        </div>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-12">
                        <div class="ibox-content">
                            <div class="table-responsive">
                                <table id="table" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Code</th>
                                            <th class="text-center">Description</th>
                                            <th class="text-center">UOM</th>
                                            <th class="text-center">HS Code</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-center">Packing</th>
                                            <th class="text-center">Rate</th>
                                            <th class="text-center">FC value</th>
                                            <th class="text-center">Pkr</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td> </td>
                                            <td> </td>
                                            <td> </td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>