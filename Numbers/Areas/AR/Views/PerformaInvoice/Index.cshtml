@model IEnumerable<ARDeliveryChallan>
@{ ViewData["Title"] = "List of Performa Invoice";
                ViewData["CurrentPage"] = "Performa Invoice";

                var companyName = Context.Session.GetString("CompanyName");
                var companyId = Context.Session.GetInt32("CompanyId").Value; 
    }

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List of Performa Invoice</h5>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="PerformaInvoice" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DCNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DCDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ManualDCNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer.Account)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShipToId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Store)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemGroupId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SalesCategoryId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DriverContactNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VehicleNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VehicleType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DriverName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransportCompany)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BuiltyNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Remarks)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DCNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DCDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ManualDCNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Account)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipToId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Store)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemGroupId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalesCategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DriverContactNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DriverName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransportCompany)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BuiltyNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>


                    <td>
                        @if (item.Status != "Approved")
                        {
        <a asp-action="Create" asp-controller="DeliveryChallan" class="btn btn-sm btn-info m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit" title="Edit"></i></a>
                            <a class="btn btn-sm btn-success m-t-n-xs" asp-controller="DeliveryChallan" asp-action="ApproveDeliveryChallan" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to Approve Delivery Challan?')"><i class="fa fa-thumbs-up" title="Approve"></i></a> }
                        else
                        {
        <a asp-action="Create" asp-controller="DeliveryChallan" class="btn btn-sm btn-info m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-search" title="View"></i></a>}

                        <a onclick="generateApArReport(@item.Id,'DeliveryChallan','@companyName','@companyId');" class="btn btn-sm btn-primary btn-lg m-t-n-xs"><i class="fas fa-print" title="Print Report"></i></a>

                    </td>
                </tr>}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



