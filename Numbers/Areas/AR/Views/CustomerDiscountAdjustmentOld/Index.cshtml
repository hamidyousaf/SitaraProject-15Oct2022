                    "defaultContent": "-"
                }, { "orderable": false, "targets": [3] }],
                "columns": [
                    { "data": "transactionNo", "name": "TransactionNo", className: "text-center" },
                    { "data": "transactionType", "name": "TransactionType" },
                   /* { "data": "customerName", "name": "Customer_Id", className: "text-left" },*/
                    {
                        "data": "date", "name": "CreatedDate", className: "text-center"
                    },
                    {
                        "data": "customerDiscountAdjustment", className: "text-center",
                        "render": function (data, row) {
                            //if (!data.isApproved) {
                            //    return "<div style=''> <a href='/AR/CustomerDiscountAdjustment/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/AR/CustomerDiscountAdjustment/Approve?id=" + data.id + "'class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-thumbs-up' title='Approve'></i></a>   <a  href='/AR/CustomerDiscountAdjustment/Delete?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash-alt' title='Delete'></i></a> </div>";
                            //}
                            //else {
                            //    return "<a href='/AR/CustomerDiscountAdjustment/UnApprove?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-thumbs-down m-t-n-xs' title='Un Approve'></i></a>  <a href='/AR/CustomerDiscountAdjustment/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a>";
                            //}

