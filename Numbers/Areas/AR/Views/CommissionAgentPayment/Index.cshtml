@model IEnumerable<ARCommissionAgentPayment>
@{
    ViewData["Title"] = "List of Commission Agent Payment";
    ViewData["CurrentPage"] = "Commission Agent Payment";

    var companyName = Context.Session.GetString("CompanyName");
    var companyId = Context.Session.GetInt32("CompanyId").Value;
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div @*class="ibox-title"*@>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="CommissionAgentPayment" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table style="width:100%;" id="Table" class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th class="searchHeader" width="8%" hidden>Id</th>
                                <th class="searchHeader" width="8%">Trans. #</th>
                                <th class="searchHeader" width="10%">Trans. Date</th>
                                <th class="searchHeader" width="10%">Customer</th>
                                <th class="searchHeader" width="10%">Category</th>
                                <th class="searchHeader" width="10%">City</th>
                                <th class="searchHeader" width="10%">Commission</th>
                                <th class="searchHeader" width="10%">Payment</th>
                                <th width="14%">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section customJS{
    <script>
        $(document).ready(function () {
            debugger;
            var table1 = $("#Table").dataTable({
                lengthMenu: [
                    [50, 100, 150, -1],
                    [50, 100, 150, 'All'],
                ],
                "processing": true,
                "serverSide": true,
                "filter": true,
                "order": [[0, "desc"]],
                dom: "Blrtip",
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                "ajax": {
                    "url": "/AR/CommissionAgentPayment/GetList",
                    "type": "POST",
                    "datatype": "json"
                },
                "language": {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "columnDefs": [{

                    "targets": '_all',
                    "defaultContent": "-"
                }, { "orderable": false, "targets": [8] },
                    {
                        targets: [6,7],
                        render: $.fn.dataTable.render.number(',', '.', 2, '')
                    }
                ],
                "columns": [
                    { "data": "id", "name": "id", className: "text-center hidden" },
                    { "data": "transactionNo", "name": "transactionNo", className: "text-center" },
                    /* { "data": "customerName", "name": "Customer_Id", className: "text-left" },*/
                    {
                        "data": "transactionDate", "name": "transactionDate", className: "text-center"
                    },

                    { "data": "customerName", "name": "customerName", className: "text-center" },
                    { "data": "categoryName", "name": "categoryName", className: "text-center" },
                    { "data": "cityName", "name": "cityName", className: "text-center" },
                    { "data": "commissionAmount", "name": "commissionAmount", className: "text-center" },
                    { "data": "payAmount", "name": "payAmount", className: "text-center" },

                    {
                        "data": null, className: "text-center",
                        "render": function (data, row) {
                            if (!data.isApproved) {
                                if (data.approve == true) {
                                    return "<div style=''> <a href='/AR/CommissionAgentPayment/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a> <a  href='/AR/CommissionAgentPayment/Delete?id=" + data.id + "'class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash' title='Delete'></i></a>  <a  href='/AR/CommissionAgentPayment/Approve?id=" + data.id + "'class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-thumbs-up' title='Approve'></i></a>   </div>";
                                } else {
                                    return "<div style=''> <a href='/AR/CommissionAgentPayment/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a> <a  href='/AR/CommissionAgentPayment/Delete?id=" + data.id + "'class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash' title='Delete'></i></a></div>";
                                }
                            }
                            else {
                                if (data.unapprove == true) {
                                    return "<a href='/AR/CommissionAgentPayment/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a> <a href='@ViewBag.ReportPath" + data.voucherId + "' target='_blank' class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-print' title='Voucher'></i> </a> <a href='/AR/CommissionAgentPayment/UnApproveVoucher?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-thumbs-down m-t-n-xs' title='Un Approve'></i></a> "
                                } else {
                                    return "<a href='/AR/CommissionAgentPayment/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a> <a href='@ViewBag.ReportPath" + data.voucherId + "' target='_blank' class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-print' title='Voucher'></i> </a>"
                                }
                            }

                        }
                    }
                ],
            })
            $('#Table thead th').each(function () {
                if ($(this).hasClass("searchHeader")) {
                    var title = $(this).text();
                    $(this).html('<input type="text" style ="color: black;width: inherit;" placeholder="' + title + '" />');
                }
            });
            table1.api().columns().every(function () {
                var that = this;
                var searchBox = $('input', this.header());
                searchBox.on('keyup change clear', function () {
                    that.search(this.value).draw()
                })
                searchBox.on('click', function (e) {
                    e.stopPropagation();
                });
            });
        });
    </script>
}