@model IEnumerable<ARSalePerson>
@{
    ViewData["Title"] = "Index";
}

<style>
    .table > thead {
        background-color: #4857a5;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div @*class="ibox-title"*@>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="SalePerson" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table class="table table-bordered table-striped" style="width:100%" id="SalePerson">
                        <thead>
                            <tr>
                                <th class="searchHeader"></th>
                                <th class="searchHeader" width="12%">Emp. Code</th>
                                <th class="searchHeader" width="18%">Name</th>
                                <th class="searchHeader" width="18%">Department</th>
                                <th class="searchHeader" width="18%">Designation</th>
                                <th class="searchHeader" width="18%">Comission</th>
                                <th width="18%">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section customJS{
    <script src="//cdn.datatables.net/plug-ins/1.10.11/sorting/date-eu.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            var table1 = $("#SalePerson").dataTable({
                lengthMenu: [
                    [50, 100, 150, -1],
                    [50, 100, 150, 'All'],
                ],
                "processing": true,
                "serverSide": true,
                "filter": true,
                "order": [[0, "desc"]],
                dom: "Blrtip",
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                "ajax": {
                    "url": "/AR/SalePerson/GetSalePersons",
                    "type": "POST",
                    "datatype": "json"
                },
                "language": {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "columnDefs": [
                    {
                        "orderable": false
                    , "targets": [6]
                    },
                    {
                        "orderable": false,
                        "visible": false,
                        "targets": [0]
                    },
                {
                        "targets": '_all',
                        "defaultContent": "-"
                    }
                

                ],

                "columns": [
                    { "data": "id", "name": "ID" },
                    { "data": "employeeCode", "name": "EmployeeCode", className: "text-center" },
                    { "data": "name", "name": "Name", className: "text-left" },
                    { "data": "department", "name": "Department", className: "text-left"},
                    { "data": "designation", "name": "Designation", className: "text-left" },
                    { "data": "comission", "name": "Comission", className: "text-right" },
                    @*{ "data": "createdBy", "name": "CreatedBy" },*@
                    {
                        "data": "id", className: "text-center",
                        "render": function (data, row) {
                            return "<div style=''> <a href='/AR/SalePerson/Detail?id=" + data + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a>  <a href='/AR/SalePerson/Create?id=" + data + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/AR/SalePerson/Delete?id=" + data + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash-alt' title='Delete'></i></a> </div>";
                        }
                    }
                ],

            })
            $('#SalePerson thead th').each(function () {
                if ($(this).hasClass("searchHeader")) {
                    var title = $(this).text();
                    $(this).html('<input type="text" style ="color: black;width: inherit;" placeholder="' + title + '" />');
                }
            });
            table1.api().columns().every(function () {
                var that = this;
                var searchBox = $('input', this.header());
                searchBox.on('keyup change clear', function () {
                    that.search(this.value).draw()
                })
                searchBox.on('click', function (e) {
                    e.stopPropagation();
                });
                //$.each($('.add-comma'), function () {
                //$(this).val(parseFloat($(this).val().replace(/,/g, "")));
            });
        });
    </script>
}
