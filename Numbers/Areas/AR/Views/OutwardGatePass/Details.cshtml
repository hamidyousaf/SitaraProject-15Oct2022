@model AROutwardGatePass
@{
    ViewData["Title"] = "OGP Detail";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <form class="form-horizontal">

                    <div class="form-group">
                        <label asp-for="OGPNo" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.OGPNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="SIGP.SIGPNo" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.SIGP.SIGPNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="OGPDate" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Model.OGPDate.ToString(CommonHelper.DateFormat)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Warehouse</label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Warehouse.ConfigValue)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Name" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Customer.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="BuiltyNo" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.BuiltyNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bails" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Bails)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="OGPQty" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.OGPQty)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-1">
                            <input type="submit" value="List" class="btn btn-white" asp-controller="OutwardGatePass" asp-action="Index" />
                            @* <input type="submit" value="Edit" class="btn btn-primary" asp-action="Create" asp-route-id="@Model.Id" />*@
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
