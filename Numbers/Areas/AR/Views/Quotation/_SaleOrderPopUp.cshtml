@model IEnumerable<ARInvoiceViewModel>
<link href="~/css/plugins/select2/select2.min.css" rel="stylesheet" />
<style>
    .fa.fa-trash-alt:hover {
        color: red;
    }
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>
<div class="table-responsive">
    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th hidden> SaleOrderItemId</th>
                @*<th hidden>PurchaseInvoice Id</th>*@
                <th>SO.#</th>
                <th>SO Date</th>
                <th>Due Date</th>
                <th>Code</th>

                <th>Item Name</th>

                <th>Mtrs / Bale</th>
                <th>Bale Type</th>
                <th>UOM</th>
                <th>SO Qty(Bale)</th>
                @*<th>Lot No</th>*@
                @*<th>Qty Balance</th>*@
                <th hidden>Rate</th>
                <th hidden>Amount</th>
                <th><input type="checkbox" class="checkbox-success" id="select_all" /></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td hidden class="SODetailIds">@Html.DisplayFor(modelItem => item.SalesOrderItemId)</td>
                @*<td hidden>
            @Html.DisplayFor(modelItem => item.PurchaseInvoiceId)
        </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaleOrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.ItemCode)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.ItemDescription)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.Meters)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.BaleType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UOMName)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.SaleOrderQty)
                </td>
                @*This field contains Purchase Quantity value
        <td>
            @Html.DisplayFor(modelItem => item.TotalDiscountAmount)
        </td>*@
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.GrandTotal)
                </td>
                <td><input id="check" class="checkbox" type="checkbox"></td>
            </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $("#select_all").change(function () {
        debugger
        //"select all" change
        var status = this.checked; // "select all" checked status
        $('.checkbox').each(function () { //iterate all listed checkbox items
            this.checked = status; //change ".checkbox" checked status
        });
    });
</script>