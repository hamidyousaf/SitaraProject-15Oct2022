@model IEnumerable<ARDiscountViewModel>
@{
    ViewData["Title"] = "List of Discount Adjustment";
    ViewData["CurrentPage"] = "Customer Discount Adjustment";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div @*class="ibox-title"*@>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="CustomerDiscountAdjustment" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table style="width:100%;" id="discountTable" class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th class="searchHeader" style="width:10%">Trans #</th>
                                <th class="searchHeader" style="width:20%">Customer Name</th>
                                <th class="searchHeader" style="width:15%">Item Category</th>
                                <th class="searchHeader" style="width:15%">Product</th>
                                <th class="searchHeader" style="width:15%">Start Date</th>
                                <th class="searchHeader" style="width:15%">End date</th>
                                <th style="width:10%">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section customJS{
    <script>
        $(document).ready(function () {
            var table1 = $("#discountTable").dataTable({
                lengthMenu: [
                    [50, 100, 150, -1],
                    [50, 100, 150, 'All'],
                ],
                "processing": true,
                "serverSide": true,
                "filter": true,
                "order": [[0, "desc"]],
                dom: "Blrtip",
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                "ajax": {
                    "url": "/AR/CustomerDiscountAdjustment/GetDiscount",
                    "type": "POST",
                    "datatype": "json"
                },
                "language": {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "columnDefs": [{
                    "target": [0],
                    "visible": false,
                    "searchable": false
                }, { "orderable": false, "targets": [6] }],

                "columns": [
                    { "data": "trans", "name": "TransactionNo", className: "text-center" },
                    { "data": "customerName", "name": "Customer_Id", className: "text-left" },
                    { "data": "categoryName", "name": "ProductType_Id", className: "text-left"  },
                    { "data": "productName", "name": "ItemCategory_Id", className: "text-left" },
                    { "data": "startDate", "name": "StartDate", className: "text-center" },
                    { "data": "endDate", "name": "EndDate", className: "text-center" },
                    {
                        "data": "arDiscountAdjustment", className: "text-center",
                        "render": function (data, row) {
                            if (!data.isApproved) {
                                if (data.approve == true) {
                                    return "<div style=''> <a href='/AR/CustomerDiscountAdjustment/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/AR/CustomerDiscountAdjustment/Approve?id=" + data.id + "'class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-thumbs-up' title='Approve'></i></a>   <a  href='/AR/CustomerDiscountAdjustment/Delete?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash-alt' title='Delete'></i></a> </div>";
                                } else {
                                    return "<div style=''> <a href='/AR/CustomerDiscountAdjustment/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/AR/CustomerDiscountAdjustment/Delete?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash-alt' title='Delete'></i></a> </div>";
                                }
                            }
                            else {
                                if (data.unapprove == true) {
                                    return " <a href='/AR/CustomerDiscountAdjustment/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a>  <a href='@ViewBag.ReportPath" + data.voucherId + "' target='_blank' class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-print' title='Voucher'></i> </a> <a href='/AR/CustomerDiscountAdjustment/UnApproveVoucher?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-thumbs-down m-t-n-xs' title='Un Approve'></i></a> "
                                } else {
                                    return " <a href='/AR/CustomerDiscountAdjustment/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a>  <a href='@ViewBag.ReportPath" + data.voucherId + "' target='_blank' class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-print' title='Voucher'></i> </a> "
                                }
                            }
                        }
                    }
                ],

            })
            $('#discountTable thead th').each(function () {
                if ($(this).hasClass("searchHeader")) {
                    var title = $(this).text();
                    $(this).html('<input type="text" style ="color: black;width: inherit;" placeholder="' + title + '" />');
                }
            });
            table1.api().columns().every(function () {
                var that = this;
                var searchBox = $('input', this.header());
                searchBox.on('keyup change clear', function () {
                    that.search(this.value).draw()
                })
                searchBox.on('click', function (e) {
                    e.stopPropagation();
                });
            });
        });
    </script>
}




