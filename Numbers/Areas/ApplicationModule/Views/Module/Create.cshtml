@model AppCompanyModule

@{ ViewData["Title"] = "Create Company Module";
    ViewData["CurrentPage"] = "Company Module";
}


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>@ViewBag.EntityState Application Company Module</h5>
            </div>
            <div class="ibox-content">
                <form class="form-horizontal" asp-controller="Module" asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <input type="hidden" asp-for="Id" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="Module_Name" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="Module_Name" autofocus data-validation="required" class="form-control" data-validation-error-msg-container="#name" />
                                    <p id="name"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="Module_Description" class="col-lg-4 control-label"></label>

                                <div class="col-lg-8">
                                    <input asp-for="Module_Description" class="form-control" />
                                    <span asp-validation-for="Module_Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="Short_Name" class="col-lg-4 control-label"></label>

                                <div class="col-lg-8">
                                    <input asp-for="Short_Name" class="form-control" />
                                    <span asp-validation-for="Short_Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="Is_Active" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="Is_Active" class="form-control" type="checkbox" style="width:20px; height:20px;" />
                                    <span asp-validation-for="Is_Active" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-lg-4 col-lg-offset-4">
                                    <a class="btn btn-white" asp-action="Index">List</a>
                                    @*<a asp-action="Create" asp-controller="Module" value=@ViewBag.EntityState class="btn btn-primary submit"> </a>*@
                                    <input type="submit" value="@ViewBag.EntityState" class="btn btn-primary submit" asp-action="Create" asp-controller="Module">

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>