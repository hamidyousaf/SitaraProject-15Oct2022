@model IEnumerable<SYS_MENU_M>
@{
    ViewData["Title"] = "List of Application Menu";
    ViewData["CurrentPage"] = "Application Menu Note";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="AppMenu" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    User Menu Name
                                </th>
                                <th>
                                     Menu Name
                                </th>
                                <th>
                                   Menu Type
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                  Is Active
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.USER_MENU_NAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MENU_NAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MENU_TYPE)
                                    </td> 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DESCRIPTION)
                                    </td>                               
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IS_ACTIVE)
                                    </td>
                                    <td>
                                            <a asp-action="Create" class="btn btn-sm btn-info m-t-n-xs" asp-route-id="@item.MENU_ID"><i class="fa fa-edit" title="Edit"></i></a>
                                            <a asp-action="Delete"hidden class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.MENU_ID"><i class="fa fa-trash-alt" title="Delete"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
