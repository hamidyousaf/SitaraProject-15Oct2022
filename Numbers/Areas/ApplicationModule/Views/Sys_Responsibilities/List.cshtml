@model IEnumerable<Numbers.Entity.Models.Responsibilities>
@{ ViewData["Title"] = "List of Company Responsibilities";
    ViewData["CurrentPage"] = "Company Responsibilities"; }
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List of Company Responsibilities</h5>

            </div>
            <div class="ibox-content">
                <div class="text-center">
                    <a class="btn btn-primary pull-left m-t-n-xs" asp-action="Index"><strong>Create New</strong></a>
                </div>
                <br /><br />
                <table class="table table-bordered table-striped dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Resp_Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Resp_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created_Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Module_Id)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Resp_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resp_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Module_Id)
                </td>
                <td>
                    <a asp-controller="Sys_Responsibilities" asp-action="Index" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Resp_Id"><i class="fa fa-edit" title="Edit"></i></a>
                    @*<a asp-action="Delete" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete Item?')"><i class="far fa-trash-alt" title="Delete"></i></a>*@
                </td>
            </tr>}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
