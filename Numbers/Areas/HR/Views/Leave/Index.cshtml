@model IEnumerable<HRLeave>
@{
    ViewData["Title"] = "List of Leaves";
    ViewData["CurrentPage"] = "Leaves";
}

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Leaves</h5>
                </div>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-action="Create"><strong>Create New</strong></a>
                    </div>
                    <br /><br />
                    <table class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShortDescription)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Unit)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Flag)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Weight)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LeaveTypeId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    <p style="white-space: pre-line;">@Html.DisplayFor(modelItem => item.Description)</p>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.ShortDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Unit)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Flag)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Weight)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.LeaveTypeId)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.IsActive)
                                </td>
                                <td>
                                    <a asp-controller="Leave" asp-action="Create" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                    <a asp-action="Delete" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this Leave?')"><i class="far fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

