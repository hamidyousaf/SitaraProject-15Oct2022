@model IEnumerable<HREmployeeLeaveOpening>
@{
    ViewData["Title"] = "List of Employee Leave Opening";
    ViewData["CurrentPage"] = "Employee Leave Openings";
}


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List of Employee Leave Opening</h5>
            </div>
            <div class="ibox-content">
                <div class="text-center">
                    <a class="btn btn-primary pull-left m-t-n-xs" asp-action="Create"><strong>Create New</strong></a>
                </div>
                <br /><br />
                <table class="table table-bordered table-striped dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OpeningDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmployeeId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee.Name)
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Employee.Department)*@
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee.Designation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LeaveTypeId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OpeningBalance)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpeningDate)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.EmployeeId)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Employee.Name)
                            </td>
                            <td>
                                @*@Html.DisplayFor(model => item.Employee.Department)*@
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Employee.Designation)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.LeaveTypeId)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.OpeningBalance)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.IsActive)
                            </td>
                            <td>
                                <a asp-controller="EmployeeLeaveOpening" asp-action="Create" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                <a asp-action="Delete" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete Item?')"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>