                        <div class="col-lg-3 col-md-3 col-sm-2 col-xs-12">
                            <div class="form-group">
                                <label asp-for="No" class=" control-label"></label>
                                <input asp-for="No" class="form-control" data-validation="required" data-validation-error-msg="Employee No. is required" data-validation-error-msg-container="#no"/>
                                <span asp-validation-for="No"></span>
                                <p id="no"></p>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-2 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Name" class=" control-label"></label>
                                <input asp-for="Name" class="form-control" data-validation="required" data-validation-error-msg="Employee Name is required" data-validation-error-msg-container="#Ename"/>
                                <span asp-validation-for="Name"></span>
                                <p id="Ename"></p>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-2 col-xs-12">
