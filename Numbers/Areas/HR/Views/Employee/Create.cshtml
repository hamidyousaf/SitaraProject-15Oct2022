                                <label asp-for="FatherName" class=" control-label"></label>
                                <input asp-for="FatherName" class="form-control" data-validation="required" data-validation-error-msg="Father Name is required" data-validation-error-msg-container="#Fname"/>
                                <span asp-validation-for="FatherName"></span>
                                <p id="Fname"></p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-2 col-xs-12">
                            <div class="form-group">
                                <label class=" control-label">Supervisor#</label>
                                <select asp-for="SupervisorId" class="form-control">
                                    <option value="1">0001-Atif Nadeem</option>
                                </select>
                                <span asp-validation-for="SupervisorId"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-2 col-sm-6 col-xs-6">
                    <!-- Below is the Div for picture of product -->
                    <div class="col-md-12">
                        @if (Model.Photo != null)
                        {
                            <img src="@Html.DisplayFor(modelItem => Model.Photo)" alt="Upload Image" class="img-thumbnail" height="300" width="300" />
                        }

                        else if (Model.Photo == null)
                        {
                            <img src="~/img/a1.jpg" class="img-thumbnail" alt="Upload Image" height="250" width="250"/>
                        }
                        <div class="form-group">
                            <div class="text-left">
                                <input asp-for="Photo" name="Photo" type="file" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

