@model IEnumerable<HRIncrement>
@{
    ViewData["Title"] = "List of Increments";
    ViewData["CurrentPage"] = "Increments";
}

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Increments</h5>
                    <div class="ibox-content">
                        <div class="text-center">
                            <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="Increment" asp-action="Create"> <strong> Create New </strong> </a>
                        </div>
                        <br />
                        <br />
                        <table class="table table-bordered table-striped dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IncrementNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IncrementDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IncrementType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IncrementPercentage)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Designation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Department)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Remarks)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IncrementNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IncrementDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmployeeType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IncrementType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IncrementPercentage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Designation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Remarks)
                                    </td>
                                    <td>
                                        @if (item.Status != "Approved")
                                        {
                                            <a asp-action="Create" asp-controller="Increment" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                            <a asp-action="Delete" asp-controller="Increment" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                            @*<a class="btn btn-sm btn-success m-t-n-xs" asp-controller="PurchaseOrder" asp-action="ApprovePurchase" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to Approve Increment?')"><i class="fa fa-thumbs-up"></i></a>*@
                                        }
                                        else
                                        {
                                            @*<a asp-action="Create" asp-controller="PurchaseOrder" class="btn btn-sm btn-success m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>*@

                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

