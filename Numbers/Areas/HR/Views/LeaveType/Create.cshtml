@model HRLeaveType
@{
    ViewData["Title"] = "Create Leave Type";
    ViewData["CurrentPage"] = "Leave Types";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>@ViewBag.EntityState Create Leave Type</h5>
                <span class="label label-success pull-right status"></span>
            </div>
            <div class="ibox-content ibox-content-1">
                <form class="form-horizontal" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="row">
                                <input type="hidden" asp-for="Id" />                               
                                <div class="form-group">
                                    <label asp-for="Unit" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="Unit" type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="Unit" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ShortDescription" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="ShortDescription" type="text" class="form-control" data-validation="required" />
                                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <textarea asp-for="Description" rows="3" class="form-control" data-validation="required"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <label asp-for="IsActive" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-4">
                                        <div class="checkbox checkbox-success">
                                            <input asp-for="IsActive" id="isActive" type="checkbox" checked="checked" />
                                            <label for="IsActive"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="form-group">
                            <div class="col-lg-4 col-lg-offset-2">
                                <a value="Back" class="btn btn-white" asp-controller="LeaveType" asp-action="Index">Back</a>
                                <input type="submit" value="Submit" class="btn btn-primary" asp-action="Create" asp-controller="LeaveType" />
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

