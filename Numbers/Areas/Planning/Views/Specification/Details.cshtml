@model CostCenter
@{
    ViewData["Title"] = "Cost Center Detail";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <form class="form-horizontal">

                    <div class="form-group">
                        <label asp-for="Code" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Code)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Model.Date.ToString(CommonHelper.DateFormat)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-lg-3 control-label"></label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Department</label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Division.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Sub Department</label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.SubDivision.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-1">
                            <input type="submit" value="List" class="btn btn-white" asp-action="Create" />
                            @*<input type="submit" value="Edit" class="btn btn-primary" asp-action="Create" asp-route-id="@Model.Id" />*@
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
