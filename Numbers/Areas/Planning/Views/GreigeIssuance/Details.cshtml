@model GreigeIssuance
@using Numbers.Areas.AR.Controllers
@{
    ViewData["Title"] = "Approved Greige Issuance";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-12 ">
                <div class="title-action">
                    <h4 class="pull-left">Detail of Griege Issuance</h4>
                    <a asp-controller="GreigeIssuance" asp-action="index" class="btn btn-white pull-right">List</a>
                    @* <a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6 pull-left">
                        <h4><span>Greige Issuance#: <strong class="text-navy"> @Model.TransactionNo</strong></span></h4>
                        <h4><span>Transaction Date: <strong class="text-navy">@Model.TransactionDate.ToString(CommonHelper.DateFormat)</strong></span></h4>
                    </div>
                    <div class="col-sm-6 pull-right">
                        <h4><span>Production Order#: <strong class="text-navy"> @ViewBag.ProductionOrder</strong></span></h4>
                        <h4><span>Vendor: <strong class="text-navy">@Model.Vendor.Name</strong></span></h4>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="tblDetail" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                
                                <th>Greige Quality</th>
                                <th>Required Qty (mtr)</th>
                                <th>Available Qty (mtr)</th>
                                <th>Issuance Qty (mtr)</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GreigeIssuanceDetail)
                            {
                            <tr>
                                
                                <td class="text-left" width="36%">
                                    @Html.DisplayFor(modelItem => item.GreigeQuality.Description)
                                </td>
                                <td class="text-right" width="15%">
                                    @Html.DisplayFor(modelItem => item.RequiredQty)
                                </td>
                                <td class="text-right" width="15%">
                                    @Html.DisplayFor(modelItem => item.AvailableQty)
                                </td>
                                <td class="text-right IssueQty" width="15%">
                                    @Html.DisplayFor(modelItem => item.IssuanceQty)
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>

                                <td class="text-left" width="36%">
                                   
                                </td>
                                <td class="text-right" width="15%">
                                    
                                </td>
                                <td class="text-right" width="15%">
                                    <strong>Total:</strong>
                                   
                                </td>
                                <td class="text-right TotalIssue cm-strong" width="15%">
                                  
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /table-responsive -->
                <table class="table invoice-total">
                    <tbody>
                       @* <tr>
                            <td><strong>Total Qty:</strong></td>
                            <td>@Model.GreigeIssuanceDetail.Sum(x=>x.FabricConsumption)</td>
                        </tr>*@
                        @*<tr>
                                <td><strong>Discount :</strong></td>
                                <td>
                                    @{
                                        var usDiscAmount = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usDiscAmount, "{0:N}", Model.DiscountAmount)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Sales Tax :</strong></td>
                                <td>
                                    @{
                                        var usSTAmount = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usSTAmount, "{0:N}", Model.SalesTaxAmount)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Grand Total :</strong></td>
                                <td>
                                    <b>
                                        @{
                                            var usGrandTotal = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usGrandTotal, "{0:N}", Model.GrandTotal)
                                        }
                                    </b>
                                </td>
                            </tr>*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section customJS{ 
    <script>
        $(document).ready(function () {
            RowCalculation2();

        });
        function RowCalculation2() {
