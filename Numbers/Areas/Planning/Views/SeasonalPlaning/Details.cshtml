@model SeasonalPlaning
@using Numbers.Areas.AR.Controllers
@{
    ViewData["Title"] = "Approved Seasonal Planning";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-4 pull-right">
                <div class="title-action">
                    <a asp-controller="SeasonalPlaning" asp-action="index" class="btn btn-white">List</a>
                    @* <a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><span>Trans.#: <strong class="text-navy"> @Model.TransactionNo</strong></span></h4>
                        <h4><span>Transaction Date: <strong class="text-navy">@Model.TransactionDate.ToString(CommonHelper.DateFormat)</strong></span></h4>
                        <span><strong>Season:</strong> @Model.SeasonalPlaningDetail.Max(x=>x.Season.ConfigValue)</span><br />
                        <span><strong>Start Date:</strong> @Model.SeasonalPlaningDetail.Max(x => x.StartDate).ToString("MMM-yy")</span><br />
                        <span><strong>End Date:</strong> @Model.SeasonalPlaningDetail.Max(x => x.EndDate).ToString("MMM-yy")</span><br />
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Item Category 4</th>
                                <th>Greige Quality</th>
                                <th hidden>Season</th>
                                <th hidden>Start Date</th>
                                <th hidden>End Date</th>
                                <th>Vol.</th>
                                <th>Dsgn/ Vol.</th>
                                <th>Dsgn Cnt</th>
                                <th>Dsgn Run</th>
                                <th>Fabric Plan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SeasonalPlaningDetail)
                            {
                            <tr>
                                <td class="text-left" width="20%">
                                    @Html.DisplayFor(modelItem => item.FourthItemCategory.Name)
                                </td>
                                <td class="text-left" width="36%">
                                    @Html.DisplayFor(modelItem => item.GreigeQuality.Description)
                                </td>
                                <td width="15%" hidden>
                                    @Html.DisplayFor(modelItem => item.Season.ConfigValue)
                                </td>
                                <td hidden class="text-center" width="8%">
                                    @item.StartDate.ToString("MMM-yy")
                                </td>
                                <td hidden class="text-center" width="8%">
                                    @item.EndDate.ToString("MMM-yy")
                                </td>
                                <td class="text-right" width="6%">
                                    @Html.DisplayFor(modelItem => item.Volume)
                                </td>
                                <td class="text-right" width="6%">
                                    @Html.DisplayFor(modelItem => item.DesignPerVolume)
                                </td>
                                <td class="text-right" width="6%">
                                    @Html.DisplayFor(modelItem => item.DesignCount)
                                </td>
                                <td class="text-right" width="6%">
                                    @Html.DisplayFor(modelItem => item.DesignRun)
                                </td>
                                <td class="text-right" width="6%">
                                    @Html.DisplayFor(modelItem => item.FabricConsumption)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /table-responsive -->
                <table class="table invoice-total">
                    <tbody>
                        <tr>
                            <td><strong>Total Fabric Consumption:</strong></td>
                            <td>@Model.SeasonalPlaningDetail.Sum(x=>x.FabricConsumption)</td>
                        </tr>
                        @*<tr>
                                <td><strong>Discount :</strong></td>
                                <td>
                                    @{
                                        var usDiscAmount = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usDiscAmount, "{0:N}", Model.DiscountAmount)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Sales Tax :</strong></td>
                                <td>
                                    @{
                                        var usSTAmount = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usSTAmount, "{0:N}", Model.SalesTaxAmount)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Grand Total :</strong></td>
                                <td>
                                    <b>
                                        @{
                                            var usGrandTotal = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usGrandTotal, "{0:N}", Model.GrandTotal)
                                        }
                                    </b>
                                </td>
                            </tr>*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

