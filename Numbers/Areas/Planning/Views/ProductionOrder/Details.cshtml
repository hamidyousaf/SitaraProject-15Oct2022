@model ProductionOrder
@using Numbers.Areas.AR.Controllers
@{
    ViewData["Title"] = "Approved Production Order";
    var x = 1;
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
<style>
    .text-center-rowspan {
        vertical-align: middle !important;
        text-align: center !important;
    }
</style>
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-4 pull-right">
                <div class="title-action">
                    <a asp-controller="ProductionOrder" asp-action="Index" class="btn btn-white">List</a>
                    @* <a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>*@
                    @*<a href="@string.Format(ViewBag.ReportPath2, Model.Id)" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print</a>*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><span>Production Order #: <strong class="text-navy">@Model.TransactionNo</strong></span></h4>
                        <p>
                            <span><strong>Production Order Date:</strong> @Model.TransactionDate.ToString(CommonHelper.DateFormat)</span><br />
                        </p>
                    </div>
                    <div class="col-sm-6 text-right">
                        @*<h4><span>Process Type:<strong class="text-navy"> @Model.Process.ConfigValue</strong></span></h4>*@
                        <h4><span>Monthly Planning #: <strong class="text-navy"> @Model.MonthlyPlanning.TransactionNo</strong></span></h4>
                        <span><strong>Vender : </strong> @Model.Vendor.Name</span><br />
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="21%">Brand Code</th>
                                <th width="21%">Greige Quality</th>
                                <th width="21%">Item</th>
                                <th width="6%">Suit Mtrs</th>
                                <th width="6%">Version</th>
                                <th width="8%">Process Type</th>
                                <th width="6%">Version Conv. (mtr)</th>
                                <th width="6%">Version Qty (mtrs)</th>
                                <th width="6%">Pcs</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.ProductionOrderItems)
                            {
                                var colSpan = Model.ProductionOrderItems.Where(x => x.GroupId == item.GroupId).Count();
                            <tr>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.FourthItemCategory.Code) -
                                    @Html.DisplayFor(modelItem => item.FourthItemCategory.Name)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.GreigeQualityDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Item.Code) -
                                    @Html.DisplayFor(modelItem => item.Item.Name)
                                </td>
                                @if (x == item.GroupId)
                                {
                                    <td rowspan="@colSpan" class="text-center-rowspan">
                                        @Html.DisplayFor(modelItem => item.SuitMeters)
                                    </td>
                                    x++;
                                }
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Version.ConfigValue)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.ProcessType.ConfigValue)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.VersionConversion)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.VersionQuantity)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.Pcs)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /table-responsive -->
                <table class="table invoice-total">
                    <tbody>
                        <tr>
                            <td><strong>Total Suite Meters:</strong></td>
                            <td>@Model.ProductionOrderItems.GroupBy(x=>x.GroupId).Select(x=> new ListOfValue{ Id = x.Select(a=>a.SuitMeters).FirstOrDefault() }).Sum(x=>x.Id)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

