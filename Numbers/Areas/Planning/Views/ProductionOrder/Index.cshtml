@model ProductionOrder
@{
    ViewData["Title"] = "List of Production Order";
    ViewData["CurrentPage"] = "Production Order";

    var companyName = Context.Session.GetString("CompanyName");
    var companyId = Context.Session.GetInt32("CompanyId").Value;
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div @*class="ibox-title"*@>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="ProductionOrder" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table style="width:100%;" id="Table" class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th class="searchHeader" width="8%">@Html.DisplayNameFor(model => model.TransactionNo)</th>
                                <th class="searchHeader" width="10%">@Html.DisplayNameFor(model => model.TransactionDate)</th>
                                <th class="searchHeader" width="14%">@Html.DisplayNameFor(model => model.MonthlyPlanningId)</th>
                                <th class="searchHeader" width="10%">@Html.DisplayNameFor(model => model.PlanOf)</th>
                                <th class="searchHeader" width="10%">@Html.DisplayNameFor(model => model.MonthlyQuantity)</th>
                                <th class="searchHeader" width="10%">@Html.DisplayNameFor(model => model.Status)</th>
                                <th width="14%">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section customJS{
    <script>
        $(document).ready(function () {
            var table1 = $("#Table").DataTable({
                lengthMenu: [
                    [50, 100, 150, -1],
                    [50, 100, 150, 'All'],
                ],
                processing: true,
                serverSide: true,
                paging: true,
                filter: true,
                order: [[0, "desc"]],
                dom: "Blrtip",
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                ajax: {
                    "url": "/Planning/ProductionOrder/GetList",
                    "type": "POST",
                    "datatype": "json"
                },
                language: {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                columnDefs: [{
                    "targets": '_all',
                    "defaultContent": "-"
                }, { "orderable": false, "targets": [6] },
                    {
                        targets: [4],
                        render: $.fn.dataTable.render.number(',','.', 0, '')
                    }
                ],
                columns: [
                    { "data": "productionOrder.transactionNo", "name": "TransactionNo", className: "text-center" },
                    { "data": "date", "name": "TransactionDate", className: "text-center" },
                    { "data": "productionOrder.monthlyPlanning.transactionNo", "name": "MonthlyPlanning.TransactionNo", className: "text-left" },
                    { "data": "productionOrder.planOf", "name": "PlanOf", className: "text-right" },
                    { "data": "suiteMeters", "name": "MonthlyQuantity", className: "text-center" },
                    { "data": "productionOrder.status", "name": "Status", className: "text-center" },
                    {
                        "data": "productionOrder", className: "text-center",
                        "render": function (data, row) {
                            if (data.status != "Approved") {
                                if (data.approve == true) {
                                    return "<a href='/Planning/ProductionOrder/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/Planning/ProductionOrder/Approve?id=" + data.id + "' class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-thumbs-up'  title='Approve'></i></a>    <a  href='/Planning/ProductionOrder/Delete?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash-alt' title='Delete'></i></a>";
                                } else {
                                    return "<a href='/Planning/ProductionOrder/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/Planning/ProductionOrder/Delete?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash-alt' title='Delete'></i></a>";
                                }
                            }
                            else {
                                if (data.unapprove == true) {
                                    return '<a href="/Planning/ProductionOrder/Details?id=' + data.id + '" class="btn btn-sm btn-info m-t-n-xs"><i class="fa fa-search" title="View"></i></a>    <a href="/Planning/ProductionOrder/UnApprove?id=' + data.id + '" class="btn btn-sm btn-danger m-t-n-xs"><i class="fa fa-thumbs-down m-t-n-xs" title="Un Approve"></i></a> <a href="@ViewBag.ReportPath' + data.id + '" target="_blank" class="btn btn-sm btn-info m-t-n-xs"><i class="fas fa - print" title="Print Report"></i></a>   ';
                                } else {
                                    return '<a href="/Planning/ProductionOrder/Details?id=' + data.id + '" class="btn btn-sm btn-info m-t-n-xs"><i class="fa fa-search" title="View"></i></a>';
                                }
                            }

                        }
                    }
                ]
            })
            $('#Table thead th').each(function () {
                if ($(this).hasClass("searchHeader")) {
                    var title = $(this).text();
                    $(this).html('<input type="text" style ="color: black;width: inherit;" placeholder="' + title + '" />');
                }
            });
            table1.columns().every(function () {
                var that = this; debugger
                var searchBox = $('input', this.header());
                searchBox.on('keyup change clear', function () {
                    that.search(this.value).draw()
                })
                searchBox.on('click', function (e) {
                    debugger
                    e.stopPropagation();
                });
            });
        });
    </script>
}