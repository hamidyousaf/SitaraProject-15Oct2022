@model InvAdjustment
@using Numbers.Repository.Helpers;
@{
    ViewData["Title"] = "Approved Store Adjustment";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-4 pull-right">
                <div class="title-action">
                    <a asp-controller="Adjustment" asp-action="Index" class="btn btn-white">List</a>
                    <a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>
                    <a href="@string.Format(ViewBag.ReportPath2, Model.Id)" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><span>Adjustment No. <strong class="text-navy">@Model.AdjustmentNo</strong></span></h4>
                        <p>
                            <span><strong>Adjustment Date:</strong> @Model.AdjustmentDate.ToString(CommonHelper.DateFormat)</span><br />
                        </p>
                    </div>
                    <div class="col-sm-6 text-right">
                        <span><strong>Ware House:</strong> @Model.WareHouse.ConfigValue</span><br />
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-left">Item</th>
                                <th class="text-right">Rate</th>
                                @*<th>Stock</th>*@
                                <th>Qty</th>
                                @*<th class="text-right">Balance</th>*@
                                <th class="text-right">Line Total</th>
                                @*<th>Remarks</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in TempData["Detail"] as IEnumerable<InvAdjustmentItem>)
                            {
                                NumbersDbContext _dbcontext = new NumbersDbContext();
                                var ItemName = new ConfigValues(_dbcontext).GetItemNameById(Convert.ToInt32(item.ItemId));
                                <tr>
                                    <td>
                                        @ItemName
                                    </td>
                                    <td class="text-right">
                                        @{
                                            var usRate = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usRate, "{0:N}", item.Rate)
                                        }
                                    </td>

                                    <td class="text-right">
                                        @{var qty = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(qty, "{0:N}", item.PhysicalStock)}
                                    </td>

                                    <td class="text-right">
                                        @{
                                            var usLineTotal = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usLineTotal, "{0:N}", item.LineTotal)
                                        }
                                           
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /table-responsive -->
                @*<table class="table invoice-total">
                        <tbody>
                            <tr>
                                <td><strong>Sub Total :</strong></td>
                                <td>
                                    @{
                                        var usSubTotal = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usSubTotal, "{0:N}", Model.Total)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Discount :</strong></td>
                                <td>
                                    @{
                                        var usDiscAmount = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usDiscAmount, "{0:N}", Model.DiscountAmount)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Sales Tax :</strong></td>
                                <td>
                                    @{
                                        var usSTAmount = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usSTAmount, "{0:N}", Model.SalesTaxAmount)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Grand Total :</strong></td>
                                <td>
                                    <b>
                                        @{
                                            var usGrandTotal = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usGrandTotal, "{0:N}", Model.GrandTotal)
                                        }
                                    </b>
                                </td>
                            </tr>
                        </tbody>
                    </table>*@
                <div class="well-remarks m-t">
                    <strong>Remarks:</strong>
                    @Model.Remarks
                </div>
            </div>
        </div>
    </div>
</div>
@section customJS{
    <script src="~/js/site.js"></script>
    <script>
      $(document).ready(function () {

           HideTrueTable();
      });

        function HideTrueTable() {
            debugger;

            if ("@TempData["ShowRate"]" != "True")
            {

                //$('#invoiceTable').find('th:nth-child(2)').hide();
                //$('#invoiceTable').find('td:nth-child(2)').hide();
                $('#invoiceTable').find('th:nth-child(7)').hide();
                $('#invoiceTable').find('td:nth-child(7)').hide();
                $('#invoiceTable').find('th:nth-child(8)').hide();
                $('#invoiceTable').find('td:nth-child(8)').hide();

            }
        }

    </script>
}

