                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6 text-right">
                        <h4><span>Trans.#: <strong class="text-navy">@Model.TrancationNo</strong></span></h4>
                        <span><strong>1st Level: </strong>@Model.ProductType.ConfigValue</span><br />
                        <span><strong>2nd Level: </strong>@Model.InvItemSecond.Name</span><br />
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>3rd Level</th>
                                <th>4th Level</th>
                                <th>Season</th>
                                <th class="text-right">Price</th>
                                <th class="text-right">P. Start Date</th>
                                <th class="text-right">P. End Date</th>
                                <th class="text-right">Discount</th>
                                <th class="text-right">D. Start Date</th>
                                <th class="text-right">D. End Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in TempData["Detail"] as IEnumerable<ItemPricingDetails>)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvItemThird.Code) -
                                    @Html.DisplayFor(modelItem => item.InvItemThird.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvItemFourth.Code) -
                                    @Html.DisplayFor(modelItem => item.InvItemFourth.Name)
                                </td>
                                <td>
                                    @item.SeasonName.ConfigValue
                                </td>
                                <td class="text-right">
                                    @item.ItemPrice
                                </td>
                                <td class="text-right">
                                    @item.Price_StartDate.ToString(CommonHelper.DateFormat)
                                </td>
                                <td class="text-right">
                                    @item.Price_EndDate.ToString(CommonHelper.DateFormat)
                                </td>
                                <td class="text-right">
                                    @item.DiscountAmount
                                </td>
                                <td class="text-right">
                                    @item.Dis_StartDate.ToString(CommonHelper.DateFormat)
                                </td>
                                <td class="text-right">
                                    @item.Dis_EndDate.ToString(CommonHelper.DateFormat)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /table-responsive -->

