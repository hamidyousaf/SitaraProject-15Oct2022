@model IEnumerable<AppTax>
@{
    ViewData["Title"] = "List of Taxes";
    ViewData["CurrentPage"] = "Define Tax";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            @*<div class="ibox-title">
                <h5>List of Taxes</h5>
            </div>*@
            <div class="ibox-content">
                <div class="text-center">
                    <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="AppTax" asp-action="Create"><strong>Create New</strong></a>
                </div>
                <br /><br />
                <table class="table table-bordered table-striped dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="text-right">
                                @Html.DisplayNameFor(model => model.SalesTaxPercentage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SalesTaxAccountId)
                            </th>
                            <th class="text-right">
                                @Html.DisplayNameFor(model => model.ExciseTaxPercentage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ExciseTaxAccountId)
                            </th>
                            <th class="text-right">
                                @Html.DisplayNameFor(model => model.IncomeTaxPercentage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IncomeTaxAccountId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="text-right">
                                @Html.DisplayFor(modelItem => item.SalesTaxPercentage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalesTaxAccount.Name)
                            </td>
                            <td class="text-right">
                                @Html.DisplayFor(modelItem => item.ExciseTaxPercentage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExciseTaxAccount.Name)
                            </td>
                            <td class="text-right">
                                @Html.DisplayFor(modelItem => item.IncomeTaxPercentage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IncomeTaxAccount.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.IsActive)
                            </td>
                            <td>
                                <a asp-action="Create" class="btn btn-sm btn-info m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit" title="Edit"></i></a>
                                <a asp-action="Delete" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete Tax?')"><i class="far fa-trash-alt" title="Delete"></i></a>
                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

