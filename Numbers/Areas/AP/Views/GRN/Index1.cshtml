@model IEnumerable<Numbers.Entity.Models.APGRN>

@{
    ViewData["Title"] = "GRN";
    ViewData["CurrentPage"] = "GRN";

    var companyName = Context.Session.GetString("CompanyName");
    var companyId = Context.Session.GetInt32("CompanyId").Value;
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div class="text-center">
                    <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="GRN" asp-action="Create"> <strong> Create New </strong> </a>
                </div>
                <br />
                <br />
                <table class="table table-bordered table-striped dataTables-example">
                    <thead>
                        <tr>
                            <th hidden>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                         
                            <th class="text-right">
                                @Html.DisplayNameFor(model => model.GrandTotal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                               
                                <td class="text-right">
                                    @{
                                        var usGrandTotal = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usGrandTotal, "{0:N}", item.GrandTotal)
                                    }
                                    @*@Html.DisplayFor(modelItem => item.GrandTotal)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @if (item.Status != "Approved")
                                     {
                                        <a asp-action="Create" asp-controller="GRN" asp-route-id="@item.Id" class="btn btn-sm btn-info m-t-n-xs"><i class="fa fa-edit" title="Edit"></i></a>
                                        <a asp-action="Approve" asp-controller="GRN" asp-route-id="@item.Id" class="btn btn-sm btn-success m-t-n-xs" onclick="return confirm('Are you sure you want to Approve Import?')"><i class="fa fa-thumbs-up" title="Approve"></i></a>
                                        <a asp-action="Delete" asp-controller="GRN" asp-route-id="@item.Id" class="btn btn-sm btn-danger m-t-n-xs" onclick="return confirm('Are you sure you want to Delete Improve?')"><i class="fa fa-trash-alt" title="Delete"></i></a> 
                                     }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>