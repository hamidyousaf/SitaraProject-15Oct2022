@model APGRN
@{
    ViewData["Title"] = "Approved Sale Invoice";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-4 pull-right">
                <div class="title-action">
                    <a asp-controller="GRN" asp-action="Index" class="btn btn-white">List</a>
                    @*<a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>*@
                    @*<a href="@string.Format(ViewBag.ReportPath2, Model.Id)" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print Invoice </a>*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><span>Vendor Name:<strong class="text-navy">@Model.VendorNme</strong></span></h4>
                        <span><strong>Warehouse:</strong> @Model.WarehouseName</span><br />
                        <span><strong>Operating Unit:</strong> @Model.Operation.OrgName</span><br />
                    </div>
                    <div class="col-sm-6 text-right">
                        <h4><span>Invoice No. <strong class="text-navy">@Model.GRNNO</strong></span></h4>
                        <p>
                            <span><strong>Invoice Date:</strong> @Model.GRNDate.ToString(CommonHelper.DateFormat)</span><br />
                        </p>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th class="text-right">GRN Qty</th>
                                <th class="text-right">Rej Qty</th>
                                <th class="text-right">Acc Qty</th>
                                <th class="text-right">Rate</th>
                                <th class="text-right">Value</th>
                                <th class="text-right">Total Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in TempData["Detail"] as IEnumerable<APGRNItem>)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Item.Code) -
                                    @Html.DisplayFor(modelItem => item.Item.Name)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.GRNQty)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.RejectedQty)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.AcceptedQty)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.Rate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total_)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.TotalValue)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /table-responsive -->

