@model IEnumerable<Numbers.Entity.Models.APSupplier>
@{
    ViewData["Title"] = "Supplier Index";
    ViewData["CurrentPage"] = "Supplier";

}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div @*class="ibox-title"*@>
                @*<h5>List of Suppliers</h5>*@
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="Supplier" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table id="Table" style="width:100%;" class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th  style="width: 8%" class="searchHeader">@Html.DisplayNameFor(model => model.Id)</th>
                                <th style="width: 16%" class="searchHeader">Suppliers@*@Html.DisplayNameFor(model => model.Name)*@</th>
                                <th style="width: 20%" class="searchHeader">@Html.DisplayNameFor(model => model.AccountId)</th>
                                <th style="width: 12%" class="searchHeader">@Html.DisplayNameFor(model => model.Address)</th>
                                <th style="width: 12%" class="searchHeader">@Html.DisplayNameFor(model => model.Phone1)</th>
                                <th  style="width: 8%" class="searchHeader">@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                <th  style="width: 8%" class="searchHeader">@Html.DisplayNameFor(model => model.ApprovedBy)</th>
                                <th width="16%">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section customJS{
    <script>
        $(document).ready(function () {
            var table1 = $("#Table").DataTable({
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 50, 50, 'All'],
                ],
                processing: true,
                serverSide: true,
                paging: true,
                filter: true,
                order: [[0, "desc"]],
                dom: "Blrtip",
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                ajax: {
                    "url": "/AP/Supplier/GetSupplier",
                    "type": "POST",
                    "datatype": "json"
                },
                language: {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                columnDefs: [{
                    "targets": '_all',
                    "defaultContent": "-"
                }, { "orderable": false, "targets": [7] }],
                columns: [
                    { "data": "apSupplier.id", "name": "Id", className: "text-center" },
                    { "data": "apSupplier.name", "name": "Name", className: "text-left" },
                    { "data": "glAccount", "name": "Account.Code", className: "text-left" },
                    { "data": "apSupplier.address", "name": "Address", className: "text-left" },
                    { "data": "apSupplier.phone1", "name": "Phone1", className: "text-center" },
                    { "data": "apSupplier.createdUser.userName", "name": "CreatedUser.UserName", className: "text-center" },
                    { "data": "apSupplier.approvalUser.userName", "name": "ApprovalUser.UserName", className: "text-center" },
                    {
                        "data": "apSupplier", className: "text-center",
                        "render": function (data, row) {
                            if (!data.isApproved) {
                                if (data.approve == true) {
                                    return " <a href='/AP/Supplier/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/AP/Supplier/Approve?id=" + data.id + "'class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-thumbs-up' title='Approve'></i></a>   <a  href='/AP/Supplier/DeleteSupplier?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash'  title='Delete'></i></a>";
                                } else {
                                    return "<a  href='/AP/Supplier/Detail?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search'  title='View'></i></a>  <a href='/AP/Supplier/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>   <a  href='/AP/Supplier/DeleteSupplier?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash'  title='Delete'></i></a>  ";
                                }
                            }
                            else {
                                if (data.unapprove == true) {
                                    return "<a  href='/AP/Supplier/Detail?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search'  title='View'></i></a>  <a href='/AP/Supplier/UnApprove?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-thumbs-down m-t-n-xs' title='Un Approve'></i></a>";
                                } else {
                                    return "";
                                }
                            }

                        }
                    }
                ]
            })
            $('#Table thead th').each(function () {
                if ($(this).hasClass("searchHeader")) {
                    var title = $(this).text();
                    $(this).html('<span hidden>' + title + '</span><input type="text" style ="color: black;width: inherit;" placeholder="' + title + '" />');
                }
            });
            table1.columns().every(function () {
                var that = this; debugger
                var searchBox = $('input', this.header());
                searchBox.on('keyup change clear', function () {
                    that.search(this.value).draw()
                })
                searchBox.on('click', function (e) {
                    debugger
                    e.stopPropagation();
                });
            });
        });
    </script>
}
