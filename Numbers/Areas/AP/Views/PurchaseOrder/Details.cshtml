@model APPurchaseOrder
@{
    ViewData["Title"] = "Approved Sales Return";
    var totalTax = 0;
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-4 pull-right">
                <div class="title-action">
                    <a asp-controller="PurchaseOrder" asp-action="Index" class="btn btn-white">List</a>
                    @*<a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>*@
                    <a href="@string.Format(ViewBag.ReportPath2, Model.Id)"  target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print Invoice </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><span>Supplier Name:<strong class="text-navy"> @Model.Supplier.Name</strong></span></h4>
                        <span><strong>Delivery Term:</strong> @Model.DeliveryTerm.ConfigValue</span><br />
                        <span><strong>Payment Term:</strong> @Model.PaymentTerm.ConfigValue</span><br />          
                    </div>
                    <div class="col-sm-6 text-right">
                        <h4><span>Purchase Order No. <strong class="text-navy">@Model.PONo</strong></span></h4>
                        <p>
                            <span><strong>Purchase Order Date:</strong> @Model.PODate.ToString(CommonHelper.DateFormat)</span><br />
                        </p>
                        <span><strong>Purchase Order Type:</strong> @Model.POType.ConfigValue</span><br />
                        <span><strong>Reference No:</strong> @Model.ReferenceNo</span><br />
                        <span><strong>Currency:</strong> @Model.Currency</span><br />
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Item</th>
                                @if (ViewBag.Responsibility == "Yarn Purchase")
                                {
                                    <th style="width:10%">Brand</th>
                                }
                                <th>Qty</th>
                                <th class="text-right">Rate</th>
                                <th class="text-right">Sub Total</th>
                                <th class="text-right">S.Tax Amount</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in TempData["Detail"] as IEnumerable<APPurchaseOrderItem>)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Item.Code) -
                                    @Html.DisplayFor(modelItem => item.Item.Name)
                                </td>
                                @if (ViewBag.Responsibility == "Yarn Purchase")
                                {
                                    <td> @Html.DisplayFor(modelItem => item.Item.Brand)</td>
                                }

                                <td>
                                    @Math.Abs(item.Qty).ToString("0.00")
                                </td>
                                <td class="text-right">
                                    @{
                                        var usRate = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usRate, "{0:N}", item.Rate)
                                    }
                                    @*@Html.DisplayFor(modelItem => item.Rate)*@
                                </td>
                                <td class="text-right">
                                    @{
                                        var usTotal = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usTotal, "{0:N}", Math.Abs(item.Total))
                                    }
                                    @*@Html.DisplayFor(modelItem => item.Total)*@
                                </td>
                                <td class="text-right">
                                    @{
                                        var usTaxAmount = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usTaxAmount, "{0:N}", Math.Abs(item.TaxAmount))
                                    }
                                    @*@Html.DisplayFor(modelItem => item.SalesTaxAmount)*@
                                </td>
                                <td class="text-right">
                                    @{
                                        var usLineTotal = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usLineTotal, "{0:N}", Math.Abs(item.Total + item.TaxAmount))
                                    }
                                    @*@Html.DisplayFor(modelItem => item.LineTotal)*@
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /table-responsive -->

                <table class="table invoice-total">
                    <tbody>
                        <tr>
                            <td><strong>Sub Total :</strong></td>
                            <td>
                                @{
                                    var usSubTotal = new System.Globalization.CultureInfo("en-US");
                                    @string.Format(usSubTotal, "{0:N}", ViewBag.SubTotal)
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Sales Tax :</strong></td>
                            <td>
                                @{
                                    var usSTAmount = new System.Globalization.CultureInfo("en-US");
                                    @string.Format(usSTAmount, "{0:N}", ViewBag.TaxAmount)
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Grand Total :</strong></td>
                            <td>
                                <b>
                                    @{
                                        var usGrandTotal = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usGrandTotal, "{0:N}", ViewBag.SubTotal + ViewBag.TaxAmount)
                                    }
                                </b>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="well-remarks m-t">
                    <strong>Remarks:</strong>
                    @Model.Remarks
                </div>
            </div>
        </div>
    </div>
</div>


