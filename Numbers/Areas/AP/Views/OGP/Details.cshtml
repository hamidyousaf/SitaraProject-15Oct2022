@model APOGP
@{
    ViewData["Title"] = "Approved OGP";
    var totalTax = 0;
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-4 pull-right">
                <div class="title-action">
                    <a asp-controller="OGP" asp-action="List" class="btn btn-white">List</a>
                    @*<a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>*@
                    @*<a href="@string.Format(ViewBag.ReportPath2, Model.Id)" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print Invoice </a>*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><span>Vendor Name:<strong class="text-navy"> @Model.Vendor.Name</strong></span></h4>
                        <span><strong>IRN #:</strong> @Model.IRNId</span><br />
                        <span><strong>Driver:</strong> @Model.DriverName</span><br />
                        <span><strong>Transport By:</strong> @Model.TransportCompany</span><br />
                        <span><strong>VehicleType:</strong> @Model.VehicleType</span><br />
                    </div>
                    <div class="col-sm-6 text-right">
                        <h4><span>OGP No. <strong class="text-navy">@Model.OGPNo</strong></span></h4>
                        <span><strong>OGP Date:</strong> @Model.OGPDate.ToString(CommonHelper.DateFormat)</span><br />
                        <span><strong>Vehicle:</strong> @Model.Vehicle</span><br />
                        <span><strong>Builty:</strong> @Model.Bility</span><br />
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>UOM</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Balance Qty</th>
                                <th class="text-right">OGP Qty</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in TempData["Detail"] as IEnumerable<APOGPDetails>)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Item.Code) -
                                        @Html.DisplayFor(modelItem => item.Item.Name)
                                    </td>
                                    <td>
                                        @item.Item.UOM.ConfigValue
                                    </td>
                                    <td class="text-right">
                                        @item.IRNRejectedQty.ToString("0.00")
                                    </td>
                                    <td class="text-right">
                                        @item.BalanceQty.ToString("0.00")
                                    </td>
                                    <td class="text-right">
                                        @item.ReceivedQty.ToString("0.00")
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /table-responsive -->

                <table class="table invoice-total">
                    <tbody>
                        <tr>
                            <td><strong>Total Quantity:</strong></td>
                            <td>
                                @{
                                    var usSTAmount = new System.Globalization.CultureInfo("en-US");
                                    @string.Format(usSTAmount, "{0:N}", ViewBag.TotalQuantity)
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="well-remarks m-t">
                    <strong>Remarks:</strong>
                    @Model.Remarks
                </div>
            </div>
        </div>
    </div>
</div>


