@model IEnumerable<APPurchaseRequisitionViewModel>
@{
    ViewData["Title"] = "List of Purchase Requisition";
    ViewData["CurrentPage"] = "Purchase Requisition";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div @*class="ibox-title"*@>
                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-controller="PurchaseRequisition" asp-action="Create"> <strong> Create New </strong> </a>
                    </div>
                    <br />
                    <br />
                    <table class="table table-bordered table-striped" style=" width:100%" id="requisitionTable">
                        <thead>
                            <tr>
                                <th style="width:10%" hidden class="searchHeader">@Html.DisplayNameFor(model => model.APPurchaseRequisition.Id)</th>
                                <th style="width:10%" class="searchHeader">@Html.DisplayNameFor(model => model.APPurchaseRequisition.PrNo)</th>
                                <th style="width:20%" class="searchHeader">@Html.DisplayNameFor(model => model.APPurchaseRequisition.PrDate)</th>
                                <th style="width:20%" class="searchHeader">@Html.DisplayNameFor(model => model.APPurchaseRequisition.Department)</th>
                                <th style="width:15%" class="searchHeader">@Html.DisplayNameFor(model => model.APPurchaseRequisition.CreatedBy)</th>
                                <th style="width:15%" class="searchHeader">@Html.DisplayNameFor(model => model.APPurchaseRequisition.ApprovedBy)</th>
                                <th class="text-center" style="width:20%">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section customJS{
    <script>
        $(document).ready(function () {
            var table1 = $("#requisitionTable").dataTable({
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 25, 50, 'All'],
                ],
                processing: true,
                serverSide: true,
                filter: true,
                order: [[0, "desc"]],
                dom: "Blrtip",
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                "ajax": {
                    "url": "/AP/PurchaseRequisition/GetRequisition",
                    "type": "POST",
                    "datatype": "json"
                },
                "language": {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "columnDefs": [{
                    "target": [0],
                    "visible": false,
                    "searchable": false
                }, { "orderable": false, "targets": [6] }],

                "columns": [
                    { "data": "apPurchaseRequisition.id", "name": "Id", className: "text-center" },
                    { "data": "apPurchaseRequisition.prNo", "name": "PrNo", className: "text-center" },
                    { "data": "prDate", "name": "PrDate", className: "text-center" },
                    { "data": "departmentName", "name": "DepartmentId", className: "text-left" },
                    { "data": "apPurchaseRequisition.createdUser.userName", "name": "CreatedUser.UserName", className: "text-center" },
                    { "data": "apPurchaseRequisition.auser", "name": "ApprovalUser.UserName", className: "text-center" },
                  

                    {
                        "data": "apPurchaseRequisition", className: "text-center",
                        "render": function (data, row) {
                            if (!data.isApproved) {
                                if (data.approve == true) {
                                    return "<div style=''> <a href='/AP/PurchaseRequisition/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/AP/PurchaseRequisition/Approve?id=" + data.id + "'class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-thumbs-up' title='Approve'></i></a>   <a  href='/AP/PurchaseRequisition/Delete?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash-alt' title='Delete'></i></a>   <a href='@ViewBag.ReportPath" + data.id + "' target='_blank' class='btn btn-sm btn-info m-t-n-xs' title='PRPrint' >PR</a> </div>";
                                } else {
                                    return "<div style=''> <a href='/AP/PurchaseRequisition/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/AP/PurchaseRequisition/Delete?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-trash-alt' title='Delete'></i></a> </div>";
                                }
                            }
                            else {
                                if (data.unapprove == true) {
                                    return "<a href='/AP/PurchaseRequisition/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a>    <a href='/AP/PurchaseRequisition/UnApprove?id=" + data.id + "' class='btn btn-sm btn-danger m-t-n-xs'><i class='fa fa-thumbs-down m-t-n-xs' title='Un Approve'></i></a>  <a href='@ViewBag.ReportPath" + data.id + "' target='_blank' class='btn btn-sm btn-info m-t-n-xs' title='PRPrint' >PR</a>";
                                } else {
                                    return "<a href='/AP/PurchaseRequisition/Details?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-search' title='View'></i></a>    <a href='@ViewBag.ReportPath" + data.id + "' target='_blank' class='btn btn-sm btn-info m-t-n-xs' title='PRPrint' >PR</a>";
                                }
                            }

                        }
                    }
                ],

            })

            $('#requisitionTable thead th').each(function () {
                if ($(this).hasClass("searchHeader")) {
                    var title = $(this).text();
                    $(this).html('<span hidden>' + title + '</span><input type="text" style ="color: black;width: inherit;" placeholder="' + title + '" />');
                }
            });
            table1.api().column(0).visible(false);
            table1.api().columns().every(function () {
                var that = this; debugger
                var searchBox = $('input', this.header());
                searchBox.on('keyup change clear', function () {
                    that.search(this.value).draw()
                })
                searchBox.on('click', function (e) {
                    debugger
                    e.stopPropagation();
                });
            });
        });
    </script>
    }

