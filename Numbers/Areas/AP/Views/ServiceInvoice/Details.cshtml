@model APPurchase
@{
    ViewData["Title"] = "Approved Service Invoice";
}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="row white-bg page-heading">
            <div class="col-lg-4 pull-right">
                <div class="title-action">
                    <a asp-controller="ServiceInvoice" asp-action="Index" class="btn btn-white">List</a>
                    <a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>
                    <a href="@string.Format(ViewBag.ReportPath2, Model.Id)"  target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print Invoice </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><span>Supplier Name:<strong class="text-navy"> @Model.Supplier.Name</strong></span></h4>
                        <span><strong>Supplier Invoice No. </strong> @Model.SupplierInvoiceNo</span><br />
                        <span><strong>IGP No:</strong> @Model.IGPNo</span><br />

                    </div>

                    <div class="col-sm-6 text-right">
                        <h4><span>Purchase No. <strong class="text-navy">@Model.PurchaseNo</strong></span></h4>
                        <p>
                            <span><strong>Purchase Date:</strong> @Model.PurchaseDate.ToString(CommonHelper.DateFormat)</span><br />
                            <span><strong>Supplier Invoice Date:</strong> @Model.SupplierInvoiceDate.ToString(CommonHelper.DateFormat)</span>
                        </p>
                        <span><strong>Reference No:</strong> @Model.ReferenceNo</span><br />
                        <span><strong>Currency:</strong> @Model.Currency  @Model.CurrencyExchangeRate</span><br />

                    </div>
                </div>
                <div class="table-responsive">
                    <table id="invoiceTable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>GL Account</th>
                                <th>Description</th>
                                <th class="text-right">Sub Total</th>
                                <th>Discount %</th>
                                <th class="text-right">Discount Amount</th>
                                <th>S.Tax %</th>
                                <th class="text-right">S.Tax Amount</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in TempData["Detail"] as IEnumerable<APPurchaseItem>)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ServiceAccount.Code) -
                                        @Html.DisplayFor(modelItem => item.ServiceAccount.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Remarks)
                                    </td>
                                    <td class="text-right">
                                        @{
                                            var usTotal = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usTotal, "{0:N}", item.Total)
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiscountPercentage)
                                    </td>
                                    <td class="text-right">
                                        @{
                                            var usDiscountAmount = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usDiscountAmount, "{0:N}", item.DiscountAmount)
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SalesTaxPercentage)
                                    </td>
                                    <td class="text-right">
                                        @{
                                            var usSalesTaxAmount = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usSalesTaxAmount, "{0:N}", item.SalesTaxAmount)
                                        }
                                    </td>
                                    <td class="text-right">
                                        @{
                                            var usLineTotal = new System.Globalization.CultureInfo("en-US");
                                            @string.Format(usLineTotal, "{0:N}", item.LineTotal)
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div><!-- /table-responsive -->

                <table class="table invoice-total">
                    <tbody>
                        <tr>
                            <td><strong>Sub Total :</strong></td>
                            <td>
                                @{
                                    var usSubTotal = new System.Globalization.CultureInfo("en-US");
                                    @string.Format(usSubTotal, "{0:N}", Model.Total)
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Discount :</strong></td>
                            <td>
                                @{
                                    var usDiscAmount = new System.Globalization.CultureInfo("en-US");
                                    @string.Format(usDiscAmount, "{0:N}", Model.TotalDiscountAmount)
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Sales Tax :</strong></td>
                            <td>
                                @{
                                    var usSTAmount = new System.Globalization.CultureInfo("en-US");
                                    @string.Format(usSTAmount, "{0:N}", Model.TotalSalesTaxAmount)
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Grand Total :</strong></td>
                            <td>
                                <b>
                                    @{
                                        var usGrandTotal = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usGrandTotal, "{0:N}", Model.GrandTotal)
                                    }
                                </b>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="well-remarks m-t">
                    <strong>Remarks:</strong>
                    @Model.Remarks
                </div>
            </div>
        </div>
    </div>
</div>


