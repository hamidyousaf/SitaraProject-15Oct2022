@model IEnumerable<Numbers.Entity.Models.APPurchase>

@{
    ViewData["Title"] = "Purchase Service";
    ViewData["CurrentPage"] = "Purchases Invoice";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div class="text-center">
                    <a class="btn btn-primary pull-left m-t-n-xs" asp-action="Create"> <strong> Create New </strong> </a>
                </div>
                <br />
                <br />
                <table id="Table" style="width:100%;" class="table table-bordered table-striped dataTables-example">
                    <thead>
                        <tr>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.PurchaseNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PurchaseDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Supplier.Name)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.ReferenceNo)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.IGPNo)
                            </th>
                            <th class="text-right">
                                @Html.DisplayNameFor(model => model.TotalSalesTaxAmount)
                            </th>
                            <th class="text-right">
                                @Html.DisplayNameFor(model => model.GrandTotal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section customJS{
    <script>
        $(document).ready(function () {
            $("#Table").DataTable({
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 25, 50, 'All'],
                ],
                processing: true,
                serverSide: true,
                paging: true,
                filter: true,
                order: [[0, "desc"]],
                dom: "Blfrtip",
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                ajax: {
                    "url": "/AP/ServiceInvoice/GetServiceInvoice",
                    "type": "POST",
                    "datatype": "json"
                },
                language: {
                    "decimal": "",
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "_MENU_",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                columnDefs: [{
                    "targets": '_all',
                    "defaultContent": "-"
                }, { "orderable": false, "targets": [7] },
                    {
                        targets: [ 4, 5],
                        render: $.fn.dataTable.render.number(',', '.', 2, '')
                    }],
                columns: [
                    { "data": "apPurchases.purchaseNo", "name": "PurchaseNo", className: "text-center" },
                    { "data": "purchaseDate", "name": "PurchaseDate", className: "text-center" },
                    { "data": "apPurchases.supplier.name", "name": "Supplier.Name", className: "text-left" },
                    //{ "data": "apPurchases.referenceNo", "name": "ReferenceNo", className: "text-right" },
                    { "data": "apPurchases.igpNo", "name": "IGPNo", className: "text-right" },
                    { "data": "apPurchases.totalSalesTaxAmount", "name": "TotalSalesTaxAmount", className: "text-right" },
                    { "data": "apPurchases.grandTotal", "name": "GrandTotal", className: "text-right" },
                    { "data": "apPurchases.status", "name": "Status", className: "text-center" },
                    {
                        "data": "apPurchases",
                        "render": function (data, row) {
                            if (data.status != "Approved") {
                                if (data.approve == true) {
                                    return "<a href='/AP/ServiceInvoice/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>    <a  href='/AP/ServiceInvoice/Approve?id=" + data.id + "' class='btn btn-sm btn-success m-t-n-xs'><i class='fa fa-thumbs-up'  title='Approve'></i></a>";
                                } else {
                                    return "<a href='/AP/ServiceInvoice/Create?id=" + data.id + "' class='btn btn-sm btn-info m-t-n-xs'><i class='fa fa-edit' title='Edit'></i></a>";
                                }
                            }
                            else {
                                return '<a href="/AP/ServiceInvoice/Details?id=' + data.id + '" class="btn btn-sm btn-info m-t-n-xs"><i class="fa fa-search" title="View"></i></a>';
                            }

                        }
                    }
                ]
            })
        });
    </script>
}