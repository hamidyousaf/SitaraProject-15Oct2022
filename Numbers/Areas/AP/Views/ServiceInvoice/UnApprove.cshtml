@model IEnumerable<Numbers.Entity.Models.APPurchase>
@{
    ViewData["Title"] = "Un-Approve Service Invoice";
    ViewData["CurrentPage"] = "Un-Approve";

}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <table class="table table-bordered table-striped dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.PurchaseNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PurchaseDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReferenceNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IGPNo)
                            </th>
                            <th class="text-right">
                                @Html.DisplayNameFor(model => model.Total)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PurchaseNo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReferenceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IGPNo)
                                </td>
                                <td class="text-right">
                                    @{
                                        var usGrandTotal = new System.Globalization.CultureInfo("en-US");
                                        @string.Format(usGrandTotal, "{0:N}", item.GrandTotal)
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @if (item.Status == "Approved")
                                    {
                                        <span title="Click to View Voucher">
                                            <a asp-action="Details" asp-controller="ServiceInvoice" class="btn btn-sm btn-info m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-search" aria-hidden="true"></i></a>
                                        </span>
                                        <span title="Click to Un-Approve">
                                            <a asp-action="UnApproveVoucher" asp-controller="ServiceInvoice" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to Un-Approve Service Invoice?')"><i class="fa fa-thumbs-down"></i></a>
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

