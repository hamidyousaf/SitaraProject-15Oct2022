@model IEnumerable<Numbers.Entity.Models.BkgVehicleIGP>

@{
    ViewData["Title"] = "List of IGPs ";
    ViewData["CurrentPage"] = "UE IGP";
}

<div class="modal inmodal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">

</div>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List of Booking Vehicle IGPs</h5>



                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-action="Create"><strong>Create New</strong></a>
                    </div>
                    <br /><br />
                    <table class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IGPNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IGPDate)
                                </th>
                                <th>
                                    Vehicle
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vehicle.BookingNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EngineNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ChassisNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IGPNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IGPDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.Item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.BookingNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EngineNo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ChassisNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @if (item.Status != "Approved")
                                    {
                                        <a asp-action="Create" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit" title="Edit"></i></a>
                                        <a asp-action="Approve" onclick="return confirm('Are you sure you want to approve?')" asp-controller="IGP" asp-route-id="@item.Id" class="btn btn-sm btn-success m-t-n-xs"><i class="fa fa-thumbs-up" title="Approve"></i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="Create" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-search" title="View" aria-hidden="true"></i></a>
                                    }
                                    @*<a asp-action="VehicleIGPDetail" class="btn btn-sm btn-success m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-list-alt"></i></a>*@
                                    @*<a asp-action="DeleteVehicle" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-trash-o" title="Delete"></i></a>*@

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
