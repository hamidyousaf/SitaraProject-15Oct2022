@model Numbers.Entity.Models.BkgVehicleIGP

@{
    ViewData["Title"] = "Vehicle IGP";
    ViewData["CurrentPage"] = "UE IGP";

}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="col-lg-9">
                <div class="ibox-title">
                    <h5>@ViewBag.EntityState Booking Vehicle IGP</h5>

                </div>
                <div class="ibox-content">
                    <form class="form-horizontal" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" id="data_1">
                                    <label asp-for="IGPDate" class="col-lg-4 control-label"></label>

                                    <div class="col-lg-8">

                                        <div class="input-group date">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input type="text" class="form-control custom-date-picker" asp-for="IGPDate" value=@(Model.Id==0 ? CommonHelper.CurrentDate : Model.IGPDate.ToString(CommonHelper.DateFormat)) />
                                            <span asp-validation-for="IGPDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="VehicleId" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <select class="chosen-select" asp-for="VehicleId" onchange="loadValue($(this).val())">
                                            <option selected="selected">Select...</option>
                                        </select>
                                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IGPNo" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="IGPNo" class="form-control" />
                                        <span asp-validation-for="IGPNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="InvoiceNo" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="InvoiceNo" class="form-control" />
                                        <span asp-validation-for="InvoiceNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="BookingCommission" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="BookingCommission" class="form-control" />
                                        <span asp-validation-for="BookingCommission" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AreaCommission" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="AreaCommission" class="form-control" />
                                        <span asp-validation-for="AreaCommission" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DeliveryCommission" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="DeliveryCommission" class="form-control" />
                                        <span asp-validation-for="DeliveryCommission" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="InsuranceAmount" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="InsuranceAmount" class="form-control" />
                                        <span asp-validation-for="InsuranceAmount" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EngineNo" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="EngineNo" class="form-control" />
                                        <span asp-validation-for="EngineNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ChassisNo" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="ChassisNo" class="form-control" />
                                        <span asp-validation-for="ChassisNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Description" class="col-lg-2 control-label"></label>
                                    <div class="col-lg-10">
                                        <textarea asp-for="Description" class="form-control"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <!--label-->
                                    <div class="col-md-1 col-lg-offset-2">
                                        <div class="checkbox checkbox-success col-md-offset-10">
                                            <input type="checkbox" asp-for="AdvanceBookingPurchase" />
                                            <label for="AdvanceBookingPurchase"></label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="AdvanceBookingPurchase" class="control-label"></label>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-lg-4 col-lg-offset-2">
                                        @*<input type="submit" value="Cancel" class="btn btn-white" asp-action="Index" />*@
                                        <a asp-controller="IGP" asp-action="Index" class="btn btn-white">Cancel</a>
                                        @if (Model.Status != "Approved")
                                        {
                                            <input type="submit" value=@ViewBag.EntityState class="btn btn-primary" />
                                        }
                                        else
                                        {
                                            <a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3" id="details">
            </div>
        </div>
    </div>
</div>

@section customJS{
    <script>
        function loadValue(val) {
            var receivedAmount = $('#receivedAmount');
            var customerName = $('#customerName');
            $.ajax({
                type: 'GET',
                url: '/Booking/DetailInfo/GetReceivedAmount?id=' + val
            }).then(function (data) {
                customerName.text(data.id);
                receivedAmount.text("Receivable: " + data.text);
            });
                $.ajax({
                    type: 'GET',
                    url: '/Booking/Api/PartialDetail?id=' + val
                }).then(function (data) {
                    $('#details').html(data);
                });
            }
                // Select For Vehicle Customer
                $(function () {

                    $('#VehicleId').select2({
                        ajax: {
                            url: '/Booking/Api/GetVehicleIGPs',
                            dataType: 'json',
                            delay: 250,
                            placeholder: 'Search a Vehicle for Booking',
                            processResults: function (data, params) {
                                return {
                                    results: data
                                };
                            },
                            cache: true
                        }
                    });
                    // Fetch the preselected item, and add to the control
                    var id = @Model.VehicleId;
                    var accountSelect = $('#VehicleId');
                    $.ajax({
                        type: 'GET',
                        url: '/Booking/Api/GetVehicle?id=' + id
                    }).then(function (data) {
                        var option = new Option(data.text, data.id, true, true);
                        accountSelect.append(option).trigger('change');
                        accountSelect.trigger({
                            type: 'select2:select',
                            params: {
                                data: data
                            }
                        });
                    });
                });


        $(function () {
            if ("@Model.Status" == "Approved") {
                $("form select, form input, form textarea").not(":submit").each(function (e) {
                    $(this).attr("disabled", "disabled");
                });
            }
        });



    </script>
}