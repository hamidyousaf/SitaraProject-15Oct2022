@model IEnumerable<Numbers.Entity.Models.BkgCommissionReceived>

@{
    ViewData["Title"] = "List of Commission Received ";
    ViewData["CurrentPage"] = "Commission Received";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List of Commission Received </h5>



                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-action="Create"><strong>Create New</strong></a>
                    </div>
                    <br /><br />
                    <table class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.ReceivedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BankCashAccountId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BookingCommission)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AreaCommission)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeliveryCommission)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReceivedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BankCashAccountId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BookingCommission)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AreaCommission)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DeliveryCommission)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>

                                    <td>
                                        @if (item.Status != "Approved")
                                        {
                                            <a asp-action="Create" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit" title="Edit"></i></a>
                                            <a asp-action="Approve" onclick="return confirm('Are you sure you want to approve?')" asp-controller="CommissionReceived" asp-route-id="@item.Id" class="btn btn-sm btn-success m-t-n-xs"><i class="fa fa-thumbs-up" title="Approve"></i></a>

                                        }
                                        else
                                        {
                                            <a asp-action="Create" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-search" title="View" aria-hidden="true"></i></a>
                                        }
                                        @*<a asp-action="ReceiptDetail" class="btn btn-sm btn-success m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-list-alt"></i></a>*@
                                        @*<a asp-action="DeleteVehicle" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-trash-o" title="Delete"></i></a>*@

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

