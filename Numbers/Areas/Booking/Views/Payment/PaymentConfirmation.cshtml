
@{
    Layout = null;
}
@model Numbers.Entity.Models.BkgPayment
<style>
    /* fix select 2 on popup */
    .select2-container--open {
        z-index: 100000;
    }
</style>
<script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
@using (Html.BeginForm("BookingConfirmation", "Vehicle", FormMethod.Post, new { area = "Booking" ,  name = "formBookingConfirmation", id = "formBookingConfirmation" }))
{


<div class="row">
    <div class="modal-dialog modal-lg">
        <div class=" col-xs-offset-3 col-xs-6 col-xs-offset-3 ">
            <div class="modal-content" id="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Booking Confirmation</h4>
                </div>
                <div class="modal-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <input type="hidden" asp-for="Id" />
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">

                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td> @Model.Id</td>
                                    </tr>
                                    <tr>
                                        <th>Vehicle</th>
                                        <td> @Model.Vehicle.Item.Name</td>
                                    </tr>
                                    <tr>
                                        <th>CNIC</th>
                                        <td> @Model.Vehicle.Customer.CNIC</td>
                                    </tr>
                                    <tr>
                                        <th>Booked By</th>
                                        <td> @Model.Vehicle.Customer.Name</td>
                                    </tr>
                                    <tr>
                                        <th>Price</th>
                                        <td> @Model.Vehicle.Price</td>
                                    </tr>
                                    <tr>
                                        <th>Received Amount</th>
                                        <td><b>@Model.Vehicle.ReceivedAmount</b></td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-lg-9 col-lg-offset-3">
                                        <input type="submit" value="Cancel" class="btn btn-white" asp-action="Approve" />
                                        <input type="submit" value="Approve" class="btn btn-primary" />

                                    </div>

                                </div>
                            </div>
                        </div>
                      

                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
   

    }
