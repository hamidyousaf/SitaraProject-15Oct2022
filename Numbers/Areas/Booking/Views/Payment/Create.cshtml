
@model Numbers.Entity.Models.BkgPayment

@{
    ViewData["Title"] = "Booking Payment";
    ViewData["CurrentPage"] = "Payments";
}


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="col-lg-9">
                <div class="ibox-title">
                    <h5>@ViewBag.EntityState Booking Payment</h5>

                </div>
                <div class="ibox-content">
                    <form class="form-horizontal" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div>
                            <input type="hidden" asp-for="Id" />
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" id="data_1">
                                    <label asp-for="PaymentDate" class="col-lg-4 control-label"></label>

                                    <div class="col-lg-8">

                                        <div class="input-group date">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input type="text" class="form-control custom-date-picker" asp-for="PaymentDate" value=@(Model.Id == 0 ? CommonHelper.CurrentDate : Model.PaymentDate.ToString(CommonHelper.DateFormat))>
                                            <span asp-validation-for="PaymentDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="VehicleId" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <select class="chosen-select" asp-for="VehicleId" data-validation="required" onchange="loadValue($(this).val())">
                                            <option  selected="selected" value="">Select...</option>
                                        </select>
                                        <span asp-validation-for="VehicleId" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-lg-4 control-label">Bank / Cash </label>
                                    <div class="col-lg-8">
                                        <select class="chosen-select" asp-for="BankCashAccountId" data-validation="required">
                                            <option selected="selected" value="">Select...</option>
                                        </select>
                                        <span asp-validation-for="BankCashAccountId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PaymentAmount" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input id="txtReceveiable" asp-for="PaymentAmount" class="form-control" data-validation="required number" data-validation-error-msg="Payment amount is not correct" data-validation-error-msg-container="#rcmt-error-dialog" />
                                        <span asp-validation-for="PaymentAmount" class="text-danger"></span>
                                        <span id="rcmt-error-dialog"></span>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Reference" class="col-lg-4 control-label"></label>
                                    <div class="col-lg-8">
                                        <input asp-for="Reference" class="form-control" />

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <label asp-for="Description" class="col-lg-2 control-label"></label>
                                    <div class="col-lg-10">
                                        <textarea asp-for="Description" class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-lg-4 col-lg-offset-2">
                                        <a class="btn btn-white" asp-action="Index">List</a>
                                        @if (Model.Status != "Approved")
                                        {
                                            <input type="submit" value=@ViewBag.EntityState class="btn btn-primary" />
                                        }
                                        else
                                        {
                                            <a href="@string.Format(ViewBag.ReportPath, Model.VoucherId)" target="_blank" class="btn btn-primary "><i class="fa fa-print"></i> Voucher</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-3" id="details">

            </div>
        </div>
    </div>
</div>



@section customJS{

    <script>

        function loadValue(val) {
            var receivedAmount = $('#receivedAmount');
            var customerName = $('#customerName');
            $.ajax({
                type: 'GET',
                url: '/Booking/DetailInfo/GetReceivedAmount?id=' + val
            }).then(function (data) {
                customerName.text(data.id);
                receivedAmount.text("Receivable: " + data.text);
                });
            $.ajax({
                type: 'GET',
                url: '/Booking/Api/PartialDetail?id=' + val
            }).then(function (data) {
                $('#details').html(data);
                //var receivable = $('#receivable').html();
                var payable = $('#payable').html();
                //removeAttr("#txtReceveiable");
                $("#txtReceveiable").attr("data-validation-allowing", "range[1.00; " + payable + "],float");
            });
        }



        // Select For Vehicle Customer
    $(function () {
       

        // Fetch the preselected item, and add to the control
        var id = @Model.VehicleId;
        var accountSelect = $('#VehicleId');
        $.ajax({
            type: 'GET',
            url: '/Booking/Api/GetVehicle?id=' + id
        }).then(function (data) {
            var option = new Option(data.text, data.id, true, true);
            accountSelect.append(option).trigger('change');
            accountSelect.trigger({
                type: 'select2:select',
                params: {
                    data: data
                }
            });
        });
    });




        //Select For BankCashAccountId
        $('#BankCashAccountId').select2({
            ajax: {
                url: '/GL/Api/GetCashBankAccounts',
                dataType: 'json',
                delay: 250,
                placeholder: 'Search for a Bank Account',
                processResults: function (data, params) {
                    return {
                        results: data
                    };
                },
                cache: true
            }
        });

        $('#VehicleId').select2({
            ajax: {
                url: '/Booking/Api/GetPayableVehicles',
                dataType: 'json',
                delay: 250,
                placeholder: 'Search for a Booking Vehicle',
                processResults: function (data, params) {
                    return {
                        results: data
                    };
                },
                cache: true
            }
        });

        // Fetch the preselected item, and add to the control
        var id = @Model.BankCashAccountId;
        var accountSelect = $('#BankCashAccountId');
        $.ajax({
            type: 'GET',
            url: '/GL/Api/GetCashBankAccount?id=' + id
        }).then(function (data) {
            var option = new Option(data.text, data.id, true, true);
            accountSelect.append(option).trigger('change');
            accountSelect.trigger({
                type: 'select2:select',
                params: {
                    data: data
                }
            });
        });

         $(function () {
            if ("@Model.Status" == "Approved") {
                $("form select, form input, form textarea").not(":submit").each(function (e) {
                    $(this).attr("disabled", "disabled");
                });
            }
        });
    </script>
    <script>
        $.validate({
            decimalSeparator: ','
        });
    </script>
}