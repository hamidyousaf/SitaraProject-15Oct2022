@model Numbers.Entity.Models.BkgPayment
@{
    ViewData["Title"] = "Booking Payment Detail";
    ViewData["CurrentPage"] = "Payments";

}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Booking Payment Detail</h5>

            </div>
            <div class="ibox-content">
                <form class="form-horizontal">

                    <div class="form-group">
                        <label asp-for="PaymentDate" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.PaymentDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="BankCashAccountId" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.BankCashAccount.AccountName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaymentAmount" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.PaymentAmount)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Reference" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">

                            @Html.DisplayFor(model => model.Reference)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Status)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-4 col-lg-offset-2">
                            <input type="submit" value="Back" class="btn btn-white" asp-action="PaymentList" />
                            <input type="submit" value="Edit" class="btn btn-primary" asp-action="PaymentCreate" asp-route-id="@Model.Id" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

