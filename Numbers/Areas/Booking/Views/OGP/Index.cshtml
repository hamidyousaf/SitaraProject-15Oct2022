@model IEnumerable<Numbers.Entity.Models.BkgVehicleOGP>

@{
    ViewData["Title"] = "List of Booking Vehicle OGPs ";
    ViewData["CurrentPage"] = "UE OGP";
}
<style>
    #myWidth{
        width:75px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List of Booking Vehicle OGPs</h5>
              <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-action="Create"><strong>Create New</strong></a>
                    </div>
                    <br /><br />
                    <table class="table table-bordered table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OGPNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OGPDate)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.VehicleId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vehicle.Item)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReceivedBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VehicleNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BiltyNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InsuranceAmount)
                                </th>
                                <td>
                                    <b>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </b>
                                </td>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeliveryStatus)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OGPNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OGPDate)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.BookingNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.Item.Name)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ReceivedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VehicleNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BiltyNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InsuranceAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeliveryStatus)
                                </td>
                                <td id="myWidth">
                                    @if (item.Status != "Approved")
                                    {
                                        <a asp-action="Create" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit" title="Edit"></i></a>
                                        <a asp-action="Approve" onclick="return confirm('Are you sure you want to approve ?')" asp-controller="OGP" asp-route-id="@item.Id" class="btn btn-sm btn-success m-t-n-xs"><i class="fa fa-thumbs-up" title="Approve"></i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="Create" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-search" title="View" aria-hidden="true"></i></a>
                                    }
                                    @*<a asp-action="VehicleOGPDetail" class="btn btn-sm btn-success m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-list-alt"></i></a>*@
                                    @*<a asp-action="DeleteVehicle" class="btn btn-sm btn-danger m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-trash-o" title="Delete"></i></a>*@

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
