@model Numbers.Entity.Models.BkgVehicleOGP
@{
    ViewData["Title"] = "Booking Vehicle OGP Detail";
    ViewData["CurrentPage"] = "OGP";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Booking Vehicle OGP Detail</h5>

            </div>
            <div class="ibox-content">
                <form class="form-horizontal">

                    <div class="form-group">
                        <label asp-for="OGPDate" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.OGPDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="OGPNo" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.OGPNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleId" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Vehicle.Item.Name)
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="ReceivedBy" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">

                            @Html.DisplayFor(model => model.ReceivedBy)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleNo" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">

                            @Html.DisplayFor(model => model.VehicleNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="BiltyNo" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">

                            @Html.DisplayFor(model => model.BiltyNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Status)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-4 col-lg-offset-2">
                            <input type="submit" value="Back" class="btn btn-white" asp-action="VehicleOGPList" />
                            <input type="submit" value="Edit" class="btn btn-primary" asp-action="VehicleOGPCreate" asp-route-id="@Model.Id" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

