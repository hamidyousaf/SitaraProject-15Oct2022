@model Numbers.Entity.Models.BkgCustomer

@{
    ViewData["Title"] = "Detail";
    ViewData["CurrentPage"] = "Customers";

}



<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Customer Detail</h5>

            </div>
            <div class="ibox-content">
                <form class="form-horizontal">

                    <div class="form-group">
                        <label asp-for="CNIC" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.CNIC)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="FatherName" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.FatherName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Address)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Remarks" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Remarks)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Phone)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mobile" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Mobile)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="GSTNo" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.GSTNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="NTNNo" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.NTNNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Account" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">

                            @Html.DisplayFor(model => model.Account.Code)
                        </div>
                    </div>

                    <div class="form-group">

                    </div>
                    <div class="form-group">
                        <div class="col-lg-4 col-lg-offset-2">
                            <input type="submit" value="Back" class="btn btn-white" asp-action="CustomerList" />
                            <input type="submit" value="Edit" class="btn btn-primary" asp-action="CustomerCreate" asp-route-id="@Model.Id" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
