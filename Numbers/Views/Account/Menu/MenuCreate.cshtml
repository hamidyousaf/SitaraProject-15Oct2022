@model Numbers.Entity.Models.AppMenu

@{
    ViewData["Title"] = "Menus Create";
}




<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>@ViewBag.EntityState Menu</h5>
            </div>
            <div class="ibox-content">
                <form class="form-horizontal" asp-action="MenuCreate">

                    <div class="form-group">
                        <label asp-for="Name" class="col-lg-2 control-label"></label>
                        <div class="col-lg-4">
                            <input asp-for="Name" class="form-control"  />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-lg-2">  </div>
                        <div class="col-lg-4">
                            <div class="checkbox checkbox-success">
                                <input id="isActive" asp-for="IsActive" type="checkbox" (@Model.IsActive ?"checked" :false )>
                                <label for="isActive">Active</label>
                            </div>
                            <div class="checkbox checkbox-success">
                                <input id="isActive" asp-for="HasSubMenus" type="checkbox" (@Model.IsActive ?"checked" :false )>
                                <label for="isActive">Has Sub Menus</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Url" class="col-lg-2 control-label"></label>
                        <div class="col-lg-4">
                            <input asp-for="Url" class="form-control" />
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
                        <label asp-for="IconClass" class="col-lg-2 control-label"></label>
                        <div class="col-lg-4">
                            <input asp-for="IconClass" class="form-control" />
                            <span asp-validation-for="IconClass" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sequence" class="col-lg-2 control-label"></label>
                        <div class="col-lg-4">
                            <input asp-for="Sequence" class="form-control" />
                            <span asp-validation-for="Sequence" class="text-danger"></span>
                        </div>
                        <label asp-for="ParentId" class="col-lg-2 control-label"></label>
                        <div class="col-lg-4">
                            <input asp-for="ParentId" class="form-control" />
                            <span asp-validation-for="ParentId" class="text-danger"></span>
                        </div>
                    </div>
                   


                    <div class="form-group">
                        <div class="col-lg-4 col-lg-offset-2">
                            <input type="submit" value="Cancel" class="btn btn-white" asp-action="MenusList" />
                            <input type="submit" value=@ViewBag.EntityState class="btn btn-primary" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

