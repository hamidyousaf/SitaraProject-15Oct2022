@model IEnumerable<Numbers.Entity.Models.AppMenu>

@{
    ViewData["Title"] = "Menus";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Menus</h5>

            </div>
            <div class="ibox-content">
                <div class="text-center">
                    <a class="btn btn-primary pull-left m-t-n-xs" asp-action="MenuCreate"><strong>Create New</strong></a>
                </div>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Url)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IconClass)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HasSubMenus)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ParentId)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Url)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IconClass)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HasSubMenus)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ParentId)
                            </td>
                            <td>
                                <a asp-action="MenuCreate" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id" title="edit"><i class="fa fa-edit"></i></a> 
                                <a asp-action="MenuDetails"  class="btn btn-sm btn-success m-t-n-xs" asp-route-id="@item.Id" title="detail"><i class="fa fa-list-alt"></i></a> 
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            </div>
    </div>
</div>