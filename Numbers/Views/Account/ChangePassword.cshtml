@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            @*<div class="ibox-title">
                <h5>Change Password</h5>
            </div>*@
            <div class="ibox-content">
                <form class="form-horizontal" asp-action="ChangePassword" enctype="multipart/form-data" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="col-md-5">

                            <label class="col-lg-11 text-danger" style="border:double;margin-left:-14px;width: 468px;">Note:  <br> Password Length 10 Letters, One letter Must be Capital and one Special Character like @@ # , Use Alphanumeric.</label>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label class="col-md-3">Current Password</label>
                                    <div class="col-md-4">
                                        <input asp-for="CurrentPassword" autofocus class="form-control" type="password" placeholder="" />
                                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label class="col-md-3">New Password</label>
                                    <div class="col-md-4">
                                        <input asp-for="Password" class="form-control" data-validation="strength" data-validation-length="min6" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label class="col-md-3">Confirm New Password</label>
                                    <div class="col-md-4">
                                        <input asp-for="ConfirmNewPassword" class="form-control" data-validation="@*confirmation*@" type="password" data-validation-length="min6" data-validation-error-msg="Confirm password should match with new password" />
                                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                        <span id="mismatch" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="col-md-2"></div>
                                    <div class="col-md-4 col-md-offset-2">
                                        <input type="submit" asp-action="ChangePassword" asp-controller="Account" value="Submit" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"></script>

@section customJS{
    <script>
        $.validate({
            modules: 'location, date, security, file'
        });
    </script>
}